<Window x:Class="VinceKitchen.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إعدادات الاتصال" Height="560" Width="520"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#212121" FlowDirection="RightToLeft"
        SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality">

    <Window.Resources>

        <!-- ظل عام للكروت -->
        <DropShadowEffect x:Key="CardShadow" Color="Black" Opacity="0.45" BlurRadius="14" ShadowDepth="2"/>

        <!-- زر عام بنفس أسلوب المطبخ -->
        <Style x:Key="KitchenButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="46"/>
            <Setter Property="Padding" Value="18,0"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="btnBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="btnBorder" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#BDBDBD"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,14,0,6"/>
        </Style>

        <!-- TextBox -->
        <Style x:Key="KitchenTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#2B2B2B"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FlowDirection" Value="LeftToRight"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox -->
        <Style x:Key="KitchenPasswordStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="#2B2B2B"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FlowDirection" Value="LeftToRight"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- CheckBox -->
        <Style x:Key="KitchenCheckStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,14,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </Window.Resources>

    <Border CornerRadius="18" Background="#212121" BorderBrush="#3A3A3A" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.55" BlurRadius="22" ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="86"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#2A2A2A" BorderBrush="#3A3A3A" BorderThickness="0,0,0,1" CornerRadius="18,18,0,0">
                <Grid Margin="16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⚙️" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="إعدادات قاعدة البيانات" Foreground="#EEEEEE" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Version -->
                    <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#3A3A3A" BorderThickness="1"
                            CornerRadius="10" Padding="10,6" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="الإصدار:" Foreground="#BDBDBD" FontSize="13" Margin="0,0,8,0"/>
                            <TextBlock x:Name="txtCurrentVersion" Text="1.0.0" Foreground="White" FontSize="13" FontWeight="Bold" FlowDirection="LeftToRight"/>
                        </StackPanel>
                    </Border>

                    <!-- Close -->
                    <Button Grid.Column="2"
                            Width="44" Height="44"
                            Background="#3A3A3A"
                            Foreground="White"
                            Click="CloseButton_Click"
                            Style="{StaticResource KitchenButtonStyle}"
                            Padding="0">
                        <TextBlock Text="✕" FontSize="18" FontWeight="Bold"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Body -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="18">
                <StackPanel>

                    <!-- Card: Connection -->
                    <Border Background="#2B2B2B" CornerRadius="14" BorderBrush="#3A3A3A" BorderThickness="1" Padding="16" Margin="0,0,0,14">
                        <Border.Effect>
                            <StaticResource ResourceKey="CardShadow"/>
                        </Border.Effect>

                        <StackPanel>

                            <TextBlock Text="بيانات الاتصال" Foreground="#EEEEEE" FontSize="16" FontWeight="Bold" Margin="0,0,0,6"/>

                            <TextBlock Text="عنوان السيرفر (Server IP / Path):" Style="{StaticResource LabelStyle}" Margin="0,10,0,6"/>
                            <TextBox x:Name="ServerPathTxt" Text="127.0.0.1,1433" Style="{StaticResource KitchenTextBoxStyle}"/>

                            <TextBlock Text="اسم قاعدة البيانات (Database Name):" Style="{StaticResource LabelStyle}"/>
                            <TextBox x:Name="DbNameTxt" Text="KitchenDB" Style="{StaticResource KitchenTextBoxStyle}"/>

                        </StackPanel>
                    </Border>

                    <!-- Card: Auth -->
                    <Border Background="#2B2B2B" CornerRadius="14" BorderBrush="#3A3A3A" BorderThickness="1" Padding="16">
                        <Border.Effect>
                            <StaticResource ResourceKey="CardShadow"/>
                        </Border.Effect>

                        <StackPanel>

                            <TextBlock Text="المصادقة" Foreground="#EEEEEE" FontSize="16" FontWeight="Bold" Margin="0,0,0,6"/>

                            <CheckBox x:Name="UseAuthCheck"
                                      Content="استخدام اسم مستخدم وكلمة مرور (SQL Authentication)"
                                      IsChecked="False"
                                      Style="{StaticResource KitchenCheckStyle}"/>

                            <StackPanel x:Name="AuthFields" Margin="0,8,0,0">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsChecked, ElementName=UseAuthCheck}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <TextBlock Text="اسم المستخدم (User ID):" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="UserIdTxt" Style="{StaticResource KitchenTextBoxStyle}"/>

                                <TextBlock Text="كلمة المرور (Password):" Style="{StaticResource LabelStyle}"/>
                                <PasswordBox x:Name="PasswordTxt" Style="{StaticResource KitchenPasswordStyle}"/>
                            </StackPanel>

                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <!-- Footer -->
            <Border Grid.Row="2"
        Background="#1F1F1F"
        BorderBrush="#3A3A3A"
        BorderThickness="0,1,0,0"
        CornerRadius="0,0,18,18">
                <Grid Margin="18,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- زرّات مصفوفة وموحّدة -->
                    <UniformGrid Grid.Column="1"
                     Rows="1"
                     Columns="3"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center">

                        <Button Content="بحث عن تحديث"
                    Background="#424242"
                    Foreground="White"
                    Click="update_Click"
                    Style="{StaticResource KitchenButtonStyle}"
                    Width="150"
                    Height="46"
                    Margin="0,0,10,0"/>

                        <Button Content="حفظ الإعدادات"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="SaveButton_Click"
                    Style="{StaticResource KitchenButtonStyle}"
                    Width="150"
                    Height="46"
                    Margin="0,0,10,0"/>

                        <Button Content="إلغاء"
                    Background="#2B2B2B"
                    Foreground="#E0E0E0"
                    Click="CloseButton_Click"
                    Style="{StaticResource KitchenButtonStyle}"
                    Width="110"
                    Height="46"
                    Margin="0,0,0,0"/>
                    </UniformGrid>
                </Grid>
            </Border>

        </Grid>
    </Border>
</Window>
