<Window x:Class="VinceApp.ServerConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إعدادات الاتصال بالسيرفر" Height="650" Width="450"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        FlowDirection="RightToLeft">

    <Border Background="White" CornerRadius="20" BorderBrush="#5D4037" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="⚙️ إعدادات السيرفر" FontSize="24" FontWeight="Bold" Foreground="#5D4037" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,0,0,10">
                    <StackPanel>

                        <TextBlock Text="اسم السيرفر (Server IP):" FontSize="14" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtServer" Height="40" FontSize="14" Padding="5" Margin="0,0,0,10" FlowDirection="LeftToRight" VerticalContentAlignment="Center" BorderBrush="#DDD">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <TextBlock Text="اسم قاعدة البيانات (Database):" FontSize="14" Foreground="Gray" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtDatabase" Height="40" FontSize="14" Padding="5" Margin="0,0,0,10" FlowDirection="LeftToRight" VerticalContentAlignment="Center" BorderBrush="#DDD">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <TextBlock Text="نوع المصادقة (Authentication):" FontSize="14" Foreground="Gray" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cmbAuthType" Height="40" FontSize="14" Margin="0,0,0,15" Padding="5" SelectionChanged="cmbAuthType_SelectionChanged" VerticalContentAlignment="Center" BorderBrush="#DDD">
                            <ComboBoxItem Content="Windows Authentication (Trusted)" Tag="Win"/>
                            <ComboBoxItem Content="SQL Server Authentication (User/Pass)" Tag="Sql"/>
                            <ComboBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8"/>
                                </Style>
                            </ComboBox.Resources>
                        </ComboBox>

                        <Border BorderBrush="#EEE" BorderThickness="1" CornerRadius="10" Padding="15" Margin="0,5,0,10" Background="#FAFAFA">
                            <StackPanel>
                                <TextBlock Text="بيانات المستخدم (SQL User)" FontWeight="Bold" Foreground="#5D4037" Margin="0,0,0,10"/>

                                <TextBlock Text="اسم المستخدم (User ID):" FontSize="13" Foreground="Gray"/>
                                <TextBox x:Name="txtUser" Height="35" FontSize="14" Padding="5" Margin="0,2,0,10" FlowDirection="LeftToRight" IsEnabled="False" VerticalContentAlignment="Center" BorderBrush="#DDD">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>

                                <TextBlock Text="كلمة المرور (Password):" FontSize="13" Foreground="Gray"/>
                                <PasswordBox x:Name="txtPass" Height="35" FontSize="14" Padding="5" Margin="0,2,0,5" FlowDirection="LeftToRight" IsEnabled="False" VerticalContentAlignment="Center" BorderBrush="#DDD">
                                    <PasswordBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5"/>
                                        </Style>
                                    </PasswordBox.Resources>
                                </PasswordBox>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="حفظ وتطبيق" Height="45" Width="120" Margin="5,0"
                                Background="#4CAF50" Foreground="White" FontSize="15" FontWeight="Bold"
                                Click="BtnSave_Click" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Content="تجربة الاتصال" Height="45" Width="120" Margin="5,0"
                                Background="#2196F3" Foreground="White" FontSize="15" FontWeight="Bold"
                                Click="BtnTest_Click" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <Button Content="إلغاء وخروج" Height="40" Margin="0,5,0,0" 
                            Background="Transparent" Foreground="#777" BorderThickness="0" IsCancel="True"
                            Cursor="Hand">
                    </Button>
                </StackPanel>
            </Grid>

            <Grid x:Name="LoadingOverlay" Visibility="Collapsed" Background="#80000000">
                <Border Background="White" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" Effect="{DynamicResource {x:Static SystemParameters.DropShadow}}">
                    <StackPanel HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="150" Height="10" Margin="0,0,0,10" BorderThickness="0"/>
                        <TextBlock x:Name="txtLoadingMsg" Text="جاري محاولة الاتصال..." HorizontalAlignment="Center" FontWeight="Bold" Foreground="#333"/>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Border>
</Window>