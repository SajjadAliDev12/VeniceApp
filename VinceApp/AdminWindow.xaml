<Window x:Class="VinceApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="لوحة التحكم" Height="700" Width="1000"
        WindowState="Maximized" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft" Background="#F5F5F5">

    <Window.Resources>

        <!-- Soft shadow -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="18" ShadowDepth="3" Opacity="0.18" Color="#000000"/>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BgBrush" Color="#F6F4F1"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrushSoft" Color="#E7E2DC"/>

        <!-- Sidebar tones -->
        <SolidColorBrush x:Key="SideBg" Color="#2F2B29"/>
        <SolidColorBrush x:Key="SideItemHover" Color="#3A3431"/>
        <SolidColorBrush x:Key="SideItemActive" Color="#5D4037"/>

        <!-- Touch-friendly menu button -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="56"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="18,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                Padding="14,10"
                                Margin="10,4"
                                BorderBrush="#00FFFFFF"
                                BorderThickness="2"
                                SnapsToDevicePixels="True">

                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SideItemHover}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#22FFFFFF"/>
                            </Trigger>

                            <!-- Press feedback (important for touch) -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SideItemActive}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#33FFFFFF"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#BCAAA4"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.45"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Background="{StaticResource BgBrush}">
        <Grid Margin="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0"
                    Background="{StaticResource SideBg}"
                    CornerRadius="18"
                    BorderBrush="#3A3532"
                    BorderThickness="1"
                    Padding="12"
                    Effect="{StaticResource CardShadow}">

                <StackPanel>

                    <!-- Title card -->
                    <Border Background="#3A3431"
                            CornerRadius="16"
                            BorderBrush="#4A4440"
                            BorderThickness="1"
                            Padding="14"
                            Margin="6,10,6,14">
                        <TextBlock Text="لوحة الإدارة ⚙️"
                                   Foreground="White"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                    </Border>

                    <Separator Background="#5D4037" Margin="14,0,14,10" Opacity="0.7"/>

                    <Button Content="📊 الرئيسية (الإحصائيات)" Style="{StaticResource MenuButtonStyle}" Click="Nav_Dashboard_Click"/>
                    <Button Content="🍔 إدارة المنتجات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Products_Click"/>
                    <Button Content="📂 إدارة التصنيفات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Categories_Click"/>
                    <Button Content="🍽️ إدارة الطاولات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Tables_Click"/>
                    <Button Content="👤 إدارة المستخدمين" Style="{StaticResource MenuButtonStyle}" Click="Nav_Users_Click" Name="BtnUsers"/>
                    <Button Content="🧾 تقارير المبيعات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Reports_Click" Name="BtnSales"/>
                    <Button Content="🛡️ سجل النظام" Style="{StaticResource MenuButtonStyle}" Click="Nav_Audit_Click" Name="BtnAudit"/>

                    <Separator Background="#5D4037" Margin="14,16,14,10" Opacity="0.7"/>

                    <!-- Back button (slightly different emphasis, but same style) -->
                    <Button Content="🚪 رجوع "
                            Style="{StaticResource MenuButtonStyle}"
                            Foreground="#FFCDD2"
                            Background="#2B2624"
                            Click="Logout_Click"/>
                </StackPanel>
            </Border>

            <!-- Content area -->
            <Grid Grid.Column="1" Margin="14,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="64"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top bar -->
                <Border Grid.Row="0"
                        Background="{StaticResource CardBrush}"
                        CornerRadius="18"
                        BorderBrush="{StaticResource BorderBrushSoft}"
                        BorderThickness="1"
                        Padding="16"
                        Effect="{StaticResource CardShadow}">

                    <Grid>
                        <TextBlock x:Name="PageTitle"
                                   Text="الرئيسية"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#4A4440"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Main frame container as a card -->
                <Border Grid.Row="1"
                        Margin="0,14,0,0"
                        Background="{StaticResource CardBrush}"
                        CornerRadius="18"
                        BorderBrush="{StaticResource BorderBrushSoft}"
                        BorderThickness="1"
                        Effect="{StaticResource CardShadow}">

                    <Frame x:Name="MainFrame"
                           NavigationUIVisibility="Hidden"/>
                </Border>
            </Grid>

        </Grid>

        <!-- Toast overlay stays as-is -->
        <Grid x:Name="ToastOverlay" IsHitTestVisible="True" Panel.ZIndex="9999" Background="{x:Null}">
            <StackPanel x:Name="NotificationArea"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="20"
                        Width="360"/>
        </Grid>
    </Grid>
</Window>
