<Window x:Class="VinceApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="لوحة التحكم" Height="700" Width="1000"
        WindowState="Maximized" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft" Background="#F2F5F8">
    <Window.Resources>

        <DropShadowEffect x:Key="CardShadow" BlurRadius="12" ShadowDepth="3" Opacity="0.08" Color="#000000"/>

        <SolidColorBrush x:Key="BgBrush" Color="#F2F5F8"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrushSoft" Color="#ECEFF1"/>

        <SolidColorBrush x:Key="SideBg" Color="#263238"/>
        <SolidColorBrush x:Key="SideItemHover" Color="#37474F"/>
        <SolidColorBrush x:Key="SideItemActive" Color="#7E57C2"/>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="56"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CFD8DC"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="18,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}"
                                Margin="10,4"
                                BorderBrush="#00FFFFFF"
                                BorderThickness="1"
                                SnapsToDevicePixels="True">

                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SideItemHover}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SideItemActive}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#546E7A"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Background="{StaticResource BgBrush}">
        <Grid Margin="18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="{StaticResource SideBg}"
                    CornerRadius="18"
                    BorderBrush="#37474F"
                    BorderThickness="1"
                    Padding="12"
                    Effect="{StaticResource CardShadow}">

                <StackPanel>

                    <Border Background="#37474F"
                            CornerRadius="14"
                            Padding="14"
                            Margin="6,10,6,14">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="⚙️" FontSize="20" Margin="0,0,10,0"/>
                            <TextBlock Text="لوحة الإدارة"
                                       Foreground="White"
                                       FontSize="20"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Separator Background="#546E7A" Margin="14,0,14,10" Opacity="0.4"/>

                    <Button Content="📊 الرئيسية (الإحصائيات)" Style="{StaticResource MenuButtonStyle}" Click="Nav_Dashboard_Click"/>
                    <Button Content="🍔 إدارة المنتجات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Products_Click"/>
                    <Button Content="📂 إدارة التصنيفات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Categories_Click"/>
                    <Button Content="🍽️ إدارة الطاولات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Tables_Click"/>
                    <Button Content="👤 إدارة المستخدمين" Style="{StaticResource MenuButtonStyle}" Click="Nav_Users_Click" Name="BtnUsers"/>
                    <Button Content="🧾 تقارير المبيعات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Reports_Click" Name="BtnSales"/>
                    <Button Content="🛡️ سجل النظام" Style="{StaticResource MenuButtonStyle}" Click="Nav_Audit_Click" Name="BtnAudit"/>

                    <Separator Background="#546E7A" Margin="14,16,14,10" Opacity="0.4"/>

                    <Button Content="🚪 رجوع "
                            Style="{StaticResource MenuButtonStyle}" IsCancel="True"
                            Foreground="#E57373"
                            Click="Logout_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3E2723"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" Margin="16,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="{StaticResource CardBrush}"
                        CornerRadius="16"
                        BorderBrush="{StaticResource BorderBrushSoft}"
                        BorderThickness="1"
                        Padding="20,0"
                        Effect="{StaticResource CardShadow}">

                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock x:Name="PageTitle"
                                       Text="الرئيسية"
                                       FontSize="22"
                                       FontWeight="Bold"
                                       Foreground="#37474F"/>
                        </StackPanel>

                    </Grid>
                </Border>

                <Border Grid.Row="1"
                        Margin="0,16,0,0"
                        Background="{StaticResource CardBrush}"
                        CornerRadius="16"
                        BorderBrush="{StaticResource BorderBrushSoft}"
                        BorderThickness="1"
                        Effect="{StaticResource CardShadow}">

                    <Frame x:Name="MainFrame"
                           NavigationUIVisibility="Hidden"/>
                </Border>
            </Grid>

        </Grid>

        <Grid x:Name="ToastOverlay" IsHitTestVisible="True" Panel.ZIndex="9999" Background="{x:Null}">
            <StackPanel x:Name="NotificationArea"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="20"
                        Width="360"/>
        </Grid>
    </Grid>
</Window>