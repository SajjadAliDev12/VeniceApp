<Window x:Class="VinceApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="لوحة التحكم" Height="700" Width="1000"
        WindowState="Maximized" WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft" Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5D4037"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#8D6E63"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#3E2723">
                <StackPanel>
                    <TextBlock Text="لوحة الإدارة ⚙️" Foreground="White" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,30,0,30"/>

                    <Separator Background="#5D4037" Margin="10,0,10,10"/>

                    <Button Content="📊 الرئيسية (الإحصائيات)" Style="{StaticResource MenuButtonStyle}" Click="Nav_Dashboard_Click"/>
                    <Button Content="🍔 إدارة المنتجات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Products_Click"/>
                    <Button Content="📂 إدارة التصنيفات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Categories_Click"/>
                    <Button Content="🍽️ إدارة الطاولات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Tables_Click"/>
                    <Button Content="👤 إدارة المستخدمين" Style="{StaticResource MenuButtonStyle}" Click="Nav_Users_Click" Name="BtnUsers"/>
                    <Button Content="🧾 تقارير المبيعات" Style="{StaticResource MenuButtonStyle}" Click="Nav_Reports_Click" Name="BtnSales"/>
                    <Button Content="🛡️ سجل النظام" Style="{StaticResource MenuButtonStyle}" Click="Nav_Audit_Click" Name="BtnAudit"/>

                    <Separator Background="#5D4037" Margin="10,20,10,10"/>

                    <Button Content="🚪 رجوع " Style="{StaticResource MenuButtonStyle}" Foreground="#FFCDD2" Click="Logout_Click"/>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0">

                        <TextBlock x:Name="PageTitle" Text="الرئيسية" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Foreground="#555"/>

                    </StackPanel>
                </Border>

                <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
            </Grid>
        </Grid>
        <Grid x:Name="ToastOverlay" IsHitTestVisible="True" Panel.ZIndex="9999" Background="{x:Null}">
            <StackPanel x:Name="NotificationArea"
HorizontalAlignment="Left"
VerticalAlignment="Top"
Margin="20"
Width="360"/>
        </Grid>
    </Grid>
</Window>