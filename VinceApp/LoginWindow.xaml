<Window x:Class="VinceApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تسجيل الدخول " Height="500" Width="450"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        FlowDirection="RightToLeft">

    <Border Background="White" CornerRadius="20" BorderBrush="#5D4037" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <Grid>

            <Grid Margin="30">
                <Button HorizontalAlignment="Left" VerticalAlignment="Top" 
                        Background="Transparent" BorderThickness="0" Cursor="Hand"
                        Click="BtnServerSettings_Click" ToolTip="إعدادات السيرفر">
                    <TextBlock Text="⚙️" FontSize="20" Foreground="#5D4037"/>
                </Button>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="🔐 تسجيل الدخول " FontSize="26" FontWeight="Bold" Foreground="#5D4037" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <TextBlock Text="اسم المستخدم:" FontSize="14" Foreground="Gray" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUser" Height="40" FontSize="16" Padding="5" Margin="0,0,0,15"/>

                    <TextBlock Text="كلمة المرور:" FontSize="14" Foreground="Gray" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="txtPass" Height="40" FontSize="16" Padding="5" Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Button Content="دخول" Height="50" Width="120" Margin="5,0" IsDefault="True"
                                Background="#5D4037" Foreground="White" FontSize="16" FontWeight="Bold" 
                                Click="Login_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                        <Button Content="نسيت كلمة المرور" Height="50" Width="140" Margin="5,0" 
                                Background="#E0E0E0" Foreground="#333" FontSize="14" FontWeight="Bold" 
                                Click="ForgotPassword_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>

                    <Button Content="خروج" FontSize="24" Height="40" Margin="0,5,0,0" Background="Transparent" Foreground="#777" BorderThickness="0" IsCancel="True"
                            Click="Cancel_Click"/>
                </StackPanel>
            </Grid>

            <Grid x:Name="LoadingOverlay" Visibility="Collapsed">
                <Border Background="#80000000" CornerRadius="20"/>

                <Border Background="White" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="150" Height="10" Margin="0,0,0,10" BorderThickness="0"/>
                        <TextBlock x:Name="txtLoadingMsg" Text="جاري محاولة الاتصال..." HorizontalAlignment="Center" FontWeight="Bold" Foreground="#333"/>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Border>
</Window>