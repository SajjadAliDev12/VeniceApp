<UserControl x:Class="VinceApp.DigitalClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- وميض النقطتين -->
        <Storyboard x:Key="BlinkColon" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="txtColon"
                             Storyboard.TargetProperty="Opacity"
                             From="1" To="0"
                             Duration="0:0:0.5"
                             AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Border Background="#FAFAFA"
            CornerRadius="12"
            Padding="10,6"
            BorderBrush="#E0E0E0"
            BorderThickness="1">

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="🕒"
                       FontSize="18"
                       Margin="0,0,6,0"/>

            <TextBlock x:Name="txtHour"
                       Text="00"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#37474F"/>

            <TextBlock x:Name="txtColon"
                       Text=":"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="2,0"
                       Foreground="#607D8B"/>

            <TextBlock x:Name="txtMinute"
                       Text="00"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#37474F"/>
        </StackPanel>

    </Border>
</UserControl>
