<Window x:Class="VinceApp.TablesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:VinceApp"
        Title="اختيار الطاولة" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized" FlowDirection="RightToLeft" WindowStyle="None"
        Background="#F0F0F0" ContentRendered="Window_ContentRendered">

    <Window.Resources>

        <!-- Soft shadow for cards -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="18" ShadowDepth="3" Opacity="0.18" Color="#000000"/>

        <!-- Accent colors -->
        <SolidColorBrush x:Key="BgBrush" Color="#F6F4F1"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderBrushSoft" Color="#E7E2DC"/>
        <SolidColorBrush x:Key="TitleBrush" Color="#2E2A27"/>

        <!-- Unified button style (touch-friendly) -->
        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="58"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="#00FFFFFF"
                                BorderThickness="2"
                                SnapsToDevicePixels="True">

                            <Border.Effect>
                                <DropShadowEffect BlurRadius="14" ShadowDepth="2" Opacity="0.18" Color="#000000"/>
                            </Border.Effect>

                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover (useful for mouse, harmless on touch) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.92"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#33FFFFFF"/>
                            </Trigger>

                            <!-- Press feedback (very important for touch) -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="1"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.12" Color="#000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#D7D7D7"/>
                                <Setter Property="Foreground" Value="#777"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- A subtle card style for borders -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrushSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        </Style>

    </Window.Resources>

    <Grid Background="{StaticResource BgBrush}">
        <Grid Margin="22">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="86"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#FFFFFF"
                    CornerRadius="18"
                    BorderBrush="{StaticResource BorderBrushSoft}"
                    BorderThickness="1"
                    Padding="18"
                    Margin="0,0,0,16"
                    Effect="{StaticResource CardShadow}">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="يرجى اختيار طاولة لبدء الطلب"
                               FontSize="30"
                               FontWeight="Bold"
                               Foreground="{StaticResource TitleBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>

                    <Border Grid.Column="1"
                            Background="#FAFAFA"
                            CornerRadius="12"
                            BorderBrush="{StaticResource BorderBrushSoft}"
                            BorderThickness="1"
                            Padding="10,6"
                            VerticalAlignment="Center">
                        <local:DigitalClock HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Tables -->
                <Border Grid.Column="0"
                        Style="{StaticResource CardBorderStyle}"
                        Padding="18"
                        Margin="0,0,12,0">

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  PanningMode="VerticalOnly">
                        <WrapPanel x:Name="TablesPanel"
                                   HorizontalAlignment="Center"
                                   Margin="6"/>
                    </ScrollViewer>
                </Border>

                <!-- Takeaway -->
                <Border Grid.Column="1"
                        Background="#2F2B29"
                        CornerRadius="16"
                        BorderBrush="#3A3532"
                        BorderThickness="1"
                        Padding="14"
                        Effect="{StaticResource CardShadow}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Background="#3A3431"
                                CornerRadius="14"
                                Padding="12"
                                Margin="0,0,0,12"
                                BorderBrush="#4A4440"
                                BorderThickness="1">
                            <TextBlock Text="🛍️ سفري معلق"
                                       Foreground="White"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      PanningMode="VerticalOnly">
                            <StackPanel x:Name="TakeawayPanel"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Bottom buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,10,0,0">

                <!-- keep your existing names, only style unified -->
                <Button x:Name="btnNewTakeaway"
                        Content="🛍️ طلب سفري جديد"
                        Width="230"
                        Background="#8E24AA"
                        FontSize="20"
                        Style="{StaticResource TouchButtonStyle}"
                        Click="TakeawayButton_Click"/>

                <Button x:Name="btnRefresh"
                        Content="🔄 تحديث"
                        Width="150"
                        Background="#6D4C41"
                        Style="{StaticResource TouchButtonStyle}"
                        Click="RefreshButton_Click"/>

                <Button x:Name="btnAdmin"
                        Content="👔 الإدارة"
                        Width="150"
                        Background="#455A64"
                        Style="{StaticResource TouchButtonStyle}"
                        Click="OpenAdmin_Click"/>

                <Button x:Name="btnSettings"
                        Content="⚙️ الإعدادات"
                        Width="150"
                        Background="#607D8B"
                        Style="{StaticResource TouchButtonStyle}"
                        Click="SettingsButton_Click"/>

                <Button x:Name="btnExit"
                        Content="🚪 خروج"
                        Width="130"
                        Background="#D32F2F"
                        Style="{StaticResource TouchButtonStyle}"
                        Click="ExitButton_Click"/>
            </StackPanel>

            <!-- Loading Overlay -->
            <Grid x:Name="LoadingOverlay"
                  Grid.RowSpan="3"
                  Visibility="Collapsed"
                  Background="#80000000">

                <Border Background="White"
                        Width="440"
                        Padding="24"
                        CornerRadius="18"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Effect="{StaticResource CardShadow}">

                    <StackPanel>
                        <TextBlock Text="جاري التحميل..."
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,12"/>

                        <ProgressBar IsIndeterminate="True"
                                     Height="12"
                                     Margin="0,0,0,12"/>

                        <TextBlock x:Name="txtLoadingHint"
                                   Text="يتم تجهيز الطاولات والطلبات"
                                   FontSize="14"
                                   Foreground="#666"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>

        <Grid x:Name="ToastOverlay" IsHitTestVisible="True" Panel.ZIndex="9999" Background="{x:Null}">
            <StackPanel x:Name="NotificationArea"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="20"
                        Width="360"/>
        </Grid>
    </Grid>
</Window>
