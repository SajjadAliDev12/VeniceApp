<UserControl x:Class="VinceApp.ConfirmDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="Auto" Width="Auto"
             FontFamily="Segoe UI" FlowDirection="RightToLeft"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <UserControl.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="15,0"
                                BorderBrush="Transparent"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="PopInAnimation">
            <DoubleAnimation Storyboard.TargetName="DialogCard"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.15"/>
        </Storyboard>
    </UserControl.Resources>

    <Grid Background="#99444444" MouseDown="Grid_MouseDown">

        <Border x:Name="DialogCard"
                Background="White"
                Width="380"
                CornerRadius="12"
                Padding="20"
                BorderBrush="#D1D1D1"
                BorderThickness="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel>
                <Border Width="50" Height="50" CornerRadius="25" Background="#F3E5F5" HorizontalAlignment="Center" Margin="0,0,0,12">
                    <TextBlock Text="؟" 
                               FontSize="30" 
                               FontWeight="Bold" 
                               Foreground="#7E57C2"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               Margin="0,-6,0,0"/>
                </Border>

                <TextBlock x:Name="TxtTitle"
                           Text="تأكيد الإجراء"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#37474F"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock x:Name="TxtMessage"
                           Text="هل أنت متأكد من المتابعة؟"
                           FontSize="14"
                           Foreground="#546E7A"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           LineHeight="22"
                           Margin="0,0,0,20"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="نعم"
                            Background="#7E57C2"
                            Foreground="White"
                            Style="{StaticResource DialogButtonStyle}"
                            Click="Yes_Click"
                            IsDefault="True"/>

                    <Button Grid.Column="2"
                            Content="إلغاء"
                            Background="#EEEEEE"
                            Foreground="#616161"
                            Style="{StaticResource DialogButtonStyle}"
                            Click="No_Click"/>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>