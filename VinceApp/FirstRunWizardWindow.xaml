<Window x:Class="VinceApp.FirstRunWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="إعداد أول تشغيل"
        Height="520" Width="560"
        MinHeight="520" MinWidth="560"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        FlowDirection="RightToLeft" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Background="#F6F4F1">

    <Window.Resources>

       

        <!-- Theme -->
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#E7E2DC"/>
        <SolidColorBrush x:Key="TextDark" Color="#2E2A27"/>

        <!-- Titles -->
        <Style x:Key="HeaderTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#5D4037"/>
        </Style>

        <Style x:Key="HeaderHintStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7A726C"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Step Title -->
        <Style x:Key="StepTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
        </Style>

        <Style x:Key="StepHintStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7A726C"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Input TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox -->
        <Style x:Key="InputPasswordStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Touch button -->
        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                Padding="{TemplateBinding Padding}">
                            

                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#D7D7D7"/>
                                <Setter Property="Foreground" Value="#777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary button -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource TouchButtonStyle}">
            <Setter Property="Background" Value="#ECE7E2"/>
            <Setter Property="Foreground" Value="#4A4440"/>
        </Style>

        <!-- Small helper label -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#6F6761"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

    </Window.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource CardBrush}"
                CornerRadius="16"
                BorderBrush="{StaticResource BorderSoft}"
                BorderThickness="1"
                Padding="16"
                Margin="0,0,0,12"
                >
            <StackPanel>
                <TextBlock Style="{StaticResource HeaderTitleStyle}" Text="إعداد أول تشغيل"/>
                <TextBlock Style="{StaticResource HeaderHintStyle}"
                           Text="أكمل الخطوات التالية مرة واحدة فقط، بعدها لن تظهر هذه الصفحة."/>
            </StackPanel>
        </Border>

        <!-- Body -->
        <Border Grid.Row="1"
                Background="{StaticResource CardBrush}"
                CornerRadius="16"
                BorderBrush="{StaticResource BorderSoft}"
                BorderThickness="1"
                Padding="12"
                >
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Step 1 Card -->
                    <Border Background="#FFFFFF"
                            BorderBrush="{StaticResource BorderSoft}"
                            BorderThickness="1"
                            CornerRadius="14"
                            Padding="14"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Style="{StaticResource StepTitleStyle}"
                                       Text="1) ضبط السيرفر والاتصال بقاعدة البيانات"/>
                            <TextBlock Style="{StaticResource StepHintStyle}"
                                       Text="افتح الإعدادات، أدخل بيانات السيرفر، ثم اختبر الاتصال واحفظ."/>
                            <Button Content="فتح إعدادات السيرفر"
                                    Background="#607D8B"
                                    HorizontalAlignment="Left"
                                    Margin="0,12,0,0"
                                    Style="{StaticResource TouchButtonStyle}"
                                    Click="OpenServerSettings_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Step 2 Card -->
                    <Border Background="#FFFFFF"
                            BorderBrush="{StaticResource BorderSoft}"
                            BorderThickness="1"
                            CornerRadius="14"
                            Padding="14"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Style="{StaticResource StepTitleStyle}"
                                       Text="2) إدخال رمز التفعيل"/>
                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           Foreground="#6F6761"
                                           Text="رمز التفعيل"/>

                                <PasswordBox Grid.Column="1"
                                             x:Name="txtActivationKey"
                                             Style="{StaticResource InputPasswordStyle}"/>
                            </Grid>

                            <Border Margin="0,12,0,0"
                                    Background="#FFF5F5"
                                    BorderBrush="#F2B8B5"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="10">
                                <TextBlock x:Name="txtStatus"
                                           Foreground="#C62828"
                                           TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Step 3 Card -->
                    <Border Background="#FFFFFF"
                            BorderBrush="{StaticResource BorderSoft}"
                            BorderThickness="1"
                            CornerRadius="14"
                            Padding="14">
                        <StackPanel>
                            <TextBlock Style="{StaticResource StepTitleStyle}"
                                       Text="3) إنشاء حساب المدير (Admin)"/>

                            <Grid Margin="0,12,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"
                                           FontWeight="Bold" Foreground="#6F6761" Text="اسم المستخدم"/>
                                <TextBox   Grid.Row="0" Grid.Column="1" x:Name="txtAdminUsername"
                                           Style="{StaticResource InputTextBoxStyle}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0"
                                           FontWeight="Bold" Foreground="#6F6761" Text="كلمة المرور"/>
                                <PasswordBox Grid.Row="1" Grid.Column="1" x:Name="txtAdminPassword"
                                             Style="{StaticResource InputPasswordStyle}"
                                             Margin="0,10,0,0"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0"
                                           FontWeight="Bold" Foreground="#6F6761" Text="الاسم الكامل"/>
                                <TextBox   Grid.Row="2" Grid.Column="1" x:Name="txtAdminFullName"
                                           Style="{StaticResource InputTextBoxStyle}"
                                           Margin="0,10,0,0"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0"
                                           FontWeight="Bold" Foreground="#6F6761" Text="البريد الإلكتروني"/>
                                <TextBox   Grid.Row="3" Grid.Column="1" x:Name="txtAdminEmail"
                                           Style="{StaticResource InputTextBoxStyle}"
                                           Margin="0,10,0,0"/>
                            </Grid>

                            <Border Margin="0,12,0,0"
                                    Background="#FAF8F6"
                                    BorderBrush="{StaticResource BorderSoft}"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="10">
                                <TextBlock Opacity="0.9" TextWrapping="Wrap" Foreground="#6F6761"
                                           Text="ملاحظة: سيتم إنشاء هذا الحساب مرة واحدة فقط، وبعدها ستسجل الدخول به من شاشة الدخول."/>
                            </Border>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{StaticResource CardBrush}"
                CornerRadius="16"
                BorderBrush="{StaticResource BorderSoft}"
                BorderThickness="1"
                Padding="12"
                Margin="0,12,0,0"
                >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="إلغاء" IsCancel="True"
                        Width="110"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Click="Cancel_Click"/>
                <Button Content="حفظ" IsDefault="True"
                        Width="140"
                        Background="#2E7D32"
                        Margin="10,0,0,0"
                        Style="{StaticResource TouchButtonStyle}"
                        Click="Finish_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
