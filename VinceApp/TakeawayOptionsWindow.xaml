<Window x:Class="VinceApp.TakeawayOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="خيارات الطلب" Height="380" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        Background="White" BorderBrush="#333" BorderThickness="2">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="خيارات الطلب الجاهز" FontSize="22" FontWeight="Bold"  HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" >
            <Button x:Name="btnServe" Content="✅ تسليم للزبون (إخفاء)" 
                    Height="60" Margin="0,0,0,15" 
                    Background="#2E7D32" Foreground="White" FontSize="18" FontWeight="Bold"
                    Click="BtnServe_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button x:Name="btnView" Content="👁️ عرض محتويات الفاتورة" 
                    Height="60" Margin="0,0,0,15" 
                    Background="#1976D2" Foreground="White" FontSize="18" FontWeight="Bold"
                    Click="BtnView_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button x:Name="btnAdd" Content="➕ أضافة ملحق للطلب" 
        Height="60" Margin="0,0,0,15" 
        Background="YellowGreen" Foreground="White" FontSize="18" FontWeight="Bold"
        Click="btnAdd_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>

        <Button Grid.Row="2" Content="إغلاق" Height="40" Background="#EEE" Foreground="#333" FontSize="16" Click="BtnCancel_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>