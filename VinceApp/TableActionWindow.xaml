<Window x:Class="VinceApp.TableActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="خيارات الطاولة" Height="420" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent" FlowDirection="RightToLeft">

    <Border Background="White" CornerRadius="20" BorderBrush="#8D6E63" BorderThickness="2">
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="الطاولة مدفوعة حالياً" 
                           FontSize="24" FontWeight="Bold" Foreground="#5D4037" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="يرجى اختيار الإجراء المناسب:" 
                           FontSize="16" Foreground="Gray" 
                           HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <Button Content="👁️ عرض الفاتورة (للقراءة)" Height="50" Margin="0,0,0,10"
                        Background="#1976D2" Foreground="White" FontSize="18" FontWeight="Bold"
                        Click="ViewBill_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="➕ أضافة ملحق للطلب" Height="50" Margin="0,0,0,10"
                        Background="#4CAF50" Foreground="White" FontSize="18" FontWeight="Bold"
                        Click="NewOrder_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="🧹 إخلاء الطاولة (مغادرة)" Height="50" Margin="0,0,0,10"
                        Background="#FF9800" Foreground="White" FontSize="18" FontWeight="Bold"
                        Click="ClearTable_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="إلغاء" Height="50" Margin="0,10,0,0"
                        Background="#E0E0E0" Foreground="#333" FontSize="18" FontWeight="Bold"
                        Click="Cancel_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>