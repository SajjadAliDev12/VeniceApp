<Window x:Class="VinceApp.TableActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="خيارات الطاولة" Height="420" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        FlowDirection="RightToLeft">

    <Window.Resources>

        <!-- نفس نمط الأزرار في باقي النوافذ (Touch friendly) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="52"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="b" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="b" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="b" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#ECEFF1"/>
            <Setter Property="Foreground" Value="#455A64"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
        </Style>

    </Window.Resources>

    <Border Background="White" CornerRadius="20" BorderBrush="#8D6E63" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.35"/>
        </Border.Effect>

        <Grid Margin="22">
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="الطاولة مدفوعة حالياً"
                           FontSize="22" FontWeight="Bold"
                           Foreground="#5D4037"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>

                <TextBlock Text="يرجى اختيار الإجراء المناسب:"
                           FontSize="14"
                           Foreground="#777"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,18"/>

                <Button Content="👁️ عرض الفاتورة (للقراءة)"
                        Background="#1976D2"
                        Click="ViewBill_Click"
                        Style="{StaticResource PrimaryButtonStyle}"/>

                <Button Content="➕ أضافة ملحق للطلب"
                        Background="#2E7D32"
                        Click="NewOrder_Click"
                        Style="{StaticResource PrimaryButtonStyle}"/>

                <Button Content="🧹 إخلاء الطاولة (مغادرة)"
                        Background="#FF9800"
                        Click="ClearTable_Click"
                        Style="{StaticResource PrimaryButtonStyle}"/>

                <Button Content="إلغاء"
                        Click="Cancel_Click"
                        IsCancel="True"
                        Style="{StaticResource SecondaryButtonStyle}"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>
