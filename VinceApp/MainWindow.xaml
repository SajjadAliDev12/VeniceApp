<Window x:Class="VinceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:VinceApp"
        Title="حلويات البندقية" 
        WindowState="Maximized" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        Topmost="False"
        Background="#F9F5F0" FlowDirection="RightToLeft">

    <Window.Resources>
        <local:ImagePathConverter x:Key="ImgConverter"/>

        <!-- ✅ Category buttons (add hover, keep same style) -->
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#5D4037"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="catBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Effect="{DynamicResource ShadowEffect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="catBorder" Property="Opacity" Value="0.92"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="catBorder" Property="Background" Value="#8D6E63"/>
                                <Setter TargetName="catBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98" CenterX="50" CenterY="40"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="catBorder" Property="Opacity" Value="1"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="catBorder" Property="Opacity" Value="0.55"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NumpadButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#455A64"/>
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12" BorderBrush="#ECEFF1" BorderThickness="2">
                            <Border.Effect>
                                <DropShadowEffect Color="#B0BEC5" Direction="270" ShadowDepth="2" BlurRadius="4" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#CFD8DC"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#B0BEC5"/>
                                <Setter TargetName="border" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="2" Opacity="0.2" Color="Black"/>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- ✅ Header height slightly bigger -->
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.ColumnSpan="3" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                <Grid Margin="20,0">

                    <!-- Right area: clock + exit -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <local:DigitalClock Width="110" Height="50"/>

                        <!-- ✅ Exit as capsule -->
                        <Button Click="ExitButton_Click"
                                Width="50" Height="40"
                                Background="#FAF8F6"
                                BorderBrush="#E7E2DC"
                                BorderThickness="1"
                                Margin="10,0,0,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="b"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="12"
                                            Padding="0">
                                        <TextBlock Text="✕"
                                                   Foreground="#C62828"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="22"
                                                   FontWeight="Bold"/>
                                    </Border>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="b" Property="Background" Value="#FFF3F3"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="b" Property="Background" Value="#FFEBEE"/>
                                            <Setter TargetName="b" Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="b" Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <TextBlock x:Name="Title"
                               Text="حلويات البندقية"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#5D4037"/>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Background="White" Margin="15" CornerRadius="16" Effect="{StaticResource ShadowEffect}">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="الطلب الحالي" FontSize="20" FontWeight="Bold" Foreground="#37474F" Margin="0,0,0,15"/>

                    <ListBox x:Name="lstCart" Grid.Row="1" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#F5F5F5" BorderThickness="0,0,0,1" Padding="5" Margin="0,5">
                                    <Grid Width="320">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="#263238"/>
                                            <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0:N0} د.ع'}" Foreground="#78909C" FontSize="14"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">

                                            <!-- ✅ Bigger touch buttons -->
                                            <Button Content="-" Width="44" Height="44"
                                                    Background="#FFEBEE" Foreground="#C62828"
                                                    FontWeight="Bold" FontSize="20"
                                                    BorderThickness="0"
                                                    Click="DecreaseQty_Click"
                                                    Tag="{Binding ProductId}">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="12"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>

                                            <TextBlock Text="{Binding Quantity}" Width="40" TextAlignment="Center"
                                                       VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#37474F"/>

                                            <Button Content="+" Width="44" Height="44"
                                                    Background="#E8F5E9" Foreground="#2E7D32"
                                                    FontWeight="Bold" FontSize="20"
                                                    BorderThickness="0"
                                                    Click="IncreaseQty_Click"
                                                    Tag="{Binding ProductId}">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="12"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>

                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Border Grid.Row="2" BorderBrush="#EEE" BorderThickness="0,1,0,0" Padding="0,15,0,0">
                        <StackPanel>
                            <DockPanel LastChildFill="False" Margin="0,5">
                                <TextBlock Text="المجموع الكلي" FontSize="18" FontWeight="SemiBold" Foreground="#546E7A"/>
                                <TextBlock x:Name="txtTotal" Text="0 د.ع" DockPanel.Dock="Left" FontSize="24" FontWeight="Bold" Foreground="#2E7D32"/>
                            </DockPanel>

                            <Grid Margin="0,15,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnConfirm" Content="حفظ" Height="60" Background="#1976D2" Foreground="White" 
                                        FontSize="20" FontWeight="Bold" Margin="0,0,5,0" Click="ConfirmOrder_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="12"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>

                                <Button x:Name="btnPay" Grid.Column="1" Content="دفع وإغلاق" Height="60" Background="#2E7D32" Foreground="White" 
                                        FontSize="22" FontWeight="Bold" Margin="5,0,0,0" Click="PayButton_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="12"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" Grid.Column="1" PanningMode="Both" VerticalScrollBarVisibility="Hidden">
                <ItemsControl x:Name="itemsControlProducts" Margin="10">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="170" Height="240" Margin="8" Background="White" Click="Product_Click" IsEnabled="{Binding IsAvailable}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="White" CornerRadius="16" BorderBrush="Transparent" BorderThickness="1" Effect="{StaticResource ShadowEffect}">
                                            <StackPanel VerticalAlignment="Top">
                                                <Border CornerRadius="16,16,0,0" ClipToBounds="True">
                                                    <Image CacheMode="BitmapCache"
                                                           Source="{Binding ImagePath, Converter={StaticResource ImgConverter},IsAsync=True,TargetNullValue='pack://application:,,,/Images/default.jpg'}" 
                                                           Height="130" Stretch="UniformToFill"/>
                                                </Border>
                                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" FontSize="15" FontWeight="Bold"
                                                           TextWrapping="Wrap" TextAlignment="Center" Margin="5,12,5,0" Foreground="#37474F"/>
                                                <TextBlock Text="{Binding Price, StringFormat='{}{0:N0} د.ع'}" HorizontalAlignment="Center"
                                                           Foreground="#2E7D32" FontWeight="Bold" FontSize="14" Margin="0,5,0,10"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                                <Setter TargetName="border" Property="Background" Value="#FAFAFA"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#FFF8E1"/>
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96" CenterX="85" CenterY="120"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Border Grid.Row="1" Grid.Column="2" Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" PanningMode="VerticalOnly">
                    <ItemsControl x:Name="icCategories">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Name}" Style="{StaticResource CategoryButtonStyle}" Click="Category_Click" Tag="{Binding Name}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <Grid x:Name="PaymentOverlay" Grid.RowSpan="2" Grid.ColumnSpan="3" Visibility="Collapsed" Background="#CC000000">
                <Border Background="#F9F5F0" Width="500" Height="720" CornerRadius="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.4"/>
                    </Border.Effect>

                    <Grid Margin="25">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="إتمام الحساب" HorizontalAlignment="Center" FontSize="26" FontWeight="Bold" Foreground="#3E2723" Margin="0,0,0,15"/>

                        <Border Grid.Row="1" Background="White" CornerRadius="16" Padding="15" Margin="0,0,0,15" BorderBrush="#EEEEEE" BorderThickness="1">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="المجموع الفرعي" FontSize="13" Foreground="#90A4AE" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="txtSubTotal" Text="0" FontSize="18" FontWeight="SemiBold" Foreground="#546E7A" HorizontalAlignment="Center"/>
                                    </StackPanel>

                                    <Button x:Name="btnDiscountArea" Grid.Column="2" Click="BtnEditDiscount_Click" Background="Transparent" BorderThickness="0">
                                        <Border Background="#FFEBEE" CornerRadius="10" Padding="10,5">
                                            <StackPanel HorizontalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="🏷️ خصم" FontSize="13" Foreground="#C62828" FontWeight="Bold"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock x:Name="txtDiscountDisplay" Text="0" FontSize="18" FontWeight="Bold" Foreground="#D32F2F"/>
                                                    <TextBlock Text=" د.ع" FontSize="12" Foreground="#D32F2F" VerticalAlignment="Bottom" Margin="2,0,0,2"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </Button>
                                </Grid>

                                <Separator Background="#F5F5F5" Margin="0,5"/>

                                <DockPanel Margin="0,5">
                                    <TextBlock Text="الصافي للدفع" FontSize="18" FontWeight="Bold" Foreground="#37474F" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtOverlayTotal" Text="0" FontSize="28" FontWeight="ExtraBold" Foreground="#3E2723" DockPanel.Dock="Left"/>
                                </DockPanel>

                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="#F1F8E9" CornerRadius="10" BorderBrush="#2E7D32" BorderThickness="1.5" Padding="5">
                                        <StackPanel>
                                            <TextBlock Text="المبلغ المستلم" FontSize="11" Foreground="#558B2F" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="txtPaidAmount" Text="0" FontSize="22" FontWeight="Bold" Foreground="#2E7D32" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="2" Background="#FFF8E1" CornerRadius="10" BorderBrush="#FFA000" BorderThickness="1" Padding="5">
                                        <StackPanel>
                                            <TextBlock Text="الباقي" FontSize="11" Foreground="#FF8F00" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="txtChangeAmount" Text="0" FontSize="22" FontWeight="Bold" Foreground="#E65100" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Grid Grid.Row="2" Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Button Content="7" Grid.Row="0" Grid.Column="0" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="8" Grid.Row="0" Grid.Column="1" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="9" Grid.Row="0" Grid.Column="2" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>

                            <Button Content="4" Grid.Row="1" Grid.Column="0" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="5" Grid.Row="1" Grid.Column="1" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="6" Grid.Row="1" Grid.Column="2" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>

                            <Button Content="1" Grid.Row="2" Grid.Column="0" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="2" Grid.Row="2" Grid.Column="1" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="3" Grid.Row="2" Grid.Column="2" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>

                            <Button Content="C" Grid.Row="3" Grid.Column="0" Style="{StaticResource NumpadButtonStyle}" Foreground="#D32F2F" Background="#FFEBEE" Click="Numpad_Clear_Click"/>
                            <Button Content="0" Grid.Row="3" Grid.Column="1" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="⌫" Grid.Row="3" Grid.Column="2" Style="{StaticResource NumpadButtonStyle}" FontSize="24" Click="Numpad_Backspace_Click"/>
                        </Grid>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                            <Button Content="إلغاء" Width="100" Height="50" Background="#ECEFF1" Foreground="#455A64" FontSize="18" FontWeight="Bold" Margin="10,0" Click="CloseOverlay_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Content="تأكيد وطباعة" Width="280" Height="50" Background="#5D4037" Foreground="White" FontSize="18" FontWeight="Bold" Margin="10,0" Click="PrintReceipt_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Grid x:Name="LoadingOverlay" Grid.RowSpan="2" Grid.ColumnSpan="3" Visibility="Collapsed" Background="#99FFFFFF">
                <Border Background="White" Width="300" Padding="30" CornerRadius="20" HorizontalAlignment="Center" VerticalAlignment="Center" Effect="{StaticResource ShadowEffect}">
                    <StackPanel>
                        <ProgressBar IsIndeterminate="True" Height="5" Margin="0,0,0,20" Foreground="#5D4037" Background="#EEE" BorderThickness="0"/>
                        <TextBlock Text="جاري التحميل..." FontSize="18" FontWeight="Bold" Foreground="#5D4037" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtLoadingHint" Text="يرجى الانتظار" FontSize="14" Foreground="#90A4AE" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>

        <!-- ✅ Toast overlay should not block touch/click under it -->
        <Grid x:Name="ToastOverlay" IsHitTestVisible="False" Panel.ZIndex="9999" Background="{x:Null}">
            <StackPanel x:Name="NotificationArea"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="20"
                        Width="360"/>
        </Grid>
    </Grid>
</Window>
