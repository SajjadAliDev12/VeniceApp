<Window x:Class="VinceApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:VinceApp"
        Title="حلويات البندقية" 
        WindowState="Maximized" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        Topmost="False"
        Background="#F2F5F8" FlowDirection="RightToLeft">
    <Window.Resources>
        <local:ImagePathConverter x:Key="ImgConverter"/>

        

        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#455A64"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="catBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                BorderBrush="#CFD8DC"
                                BorderThickness="1"
                               >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="catBorder" Property="Background" Value="#F5F5F5"/>
                                <Setter TargetName="catBorder" Property="BorderBrush" Value="#7E57C2"/>
                                <Setter Property="Foreground" Value="#7E57C2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="catBorder" Property="Background" Value="#EDE7F6"/>
                                <Setter TargetName="catBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98" CenterX="50" CenterY="30"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NumpadButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#37474F"/>
            <Setter Property="FontSize" Value="26"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12" 
                                BorderBrush="#ECEFF1" BorderThickness="1">
                            
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FAFAFA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#ECEFF1"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.ColumnSpan="3" Background="White"  Panel.ZIndex="10">
                <Grid Margin="24,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <local:DigitalClock Width="120" Height="50" Foreground="#546E7A"/>

                        <Button Click="ExitButton_Click" 
                                Width="50" Height="50"
                                Background="#FFEBEE"
                                Margin="15,0,0,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="b" Background="{TemplateBinding Background}" CornerRadius="14">
                                        <TextBlock Text="✕" Foreground="#E53935" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="b" Property="Background" Value="#FFCDD2"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="b" Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🛍️" FontSize="24" Margin="0,0,10,0"/>
                        <TextBlock x:Name="Title" Text="حلويات البندقية" FontSize="24" FontWeight="Bold" Foreground="#37474F"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Background="White" Margin="20,20,0,20" CornerRadius="16" >
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="الطلب الحالي" FontSize="20" FontWeight="Bold" Foreground="#37474F" Margin="5,5,0,15"/>

                    <ListBox x:Name="lstCart" Grid.Row="1" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#F5F5F5" BorderThickness="0,0,0,1" Padding="5" Margin="0,5">
                                    <Grid Width="340">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="#263238"/>
                                            <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0:N0} د.ع'}" Foreground="#78909C" FontSize="14" Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button Content="-" Width="40" Height="40" Background="#FFEBEE" Foreground="#D32F2F" FontSize="20" FontWeight="Bold" 
                                                    Click="DecreaseQty_Click" Tag="{Binding ProductId}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>

                                            <TextBlock Text="{Binding Quantity}" Width="35" TextAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Foreground="#37474F"/>

                                            <Button Content="+" Width="40" Height="40" Background="#E8F5E9" Foreground="#388E3C" FontSize="20" FontWeight="Bold" 
                                                    Click="IncreaseQty_Click" Tag="{Binding ProductId}">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <Border Grid.Row="2" BorderBrush="#EEEEEE" BorderThickness="0,1,0,0" Padding="0,20,0,0">
                        <StackPanel>
                            <DockPanel LastChildFill="False" Margin="5,0,5,15">
                                <TextBlock Text="المجموع الكلي" FontSize="16" FontWeight="SemiBold" Foreground="#78909C" VerticalAlignment="Bottom"/>
                                <TextBlock x:Name="txtTotal" Text="0 د.ع" DockPanel.Dock="Left" FontSize="26" FontWeight="Bold" Foreground="#2E7D32"/>
                            </DockPanel>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnConfirm" Content="حفظ" Height="60" Background="#607D8B" Foreground="White"  
        FontSize="18" FontWeight="Bold" Margin="0,0,8,0" Click="ConfirmOrder_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="14" RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                </Border.RenderTransform>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bdr" Property="Background" Value="#78909C"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="bdr" Property="Background" Value="#455A64"/>
                                                    <Setter TargetName="bdr" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Button x:Name="btnPay" Grid.Column="1" Content="دفع وإغلاق" Height="60" Background="#43A047" Foreground="White" IsDefault="True"
        FontSize="20" FontWeight="Bold" Margin="0,0,0,0" Click="PayButton_Click">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="14"  RenderTransformOrigin="0.5,0.5">
                                                <Border.RenderTransform>
                                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                </Border.RenderTransform>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>

                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bdr" Property="Background" Value="#66BB6A"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="bdr" Property="Background" Value="#2E7D32"/>
                                                    <Setter TargetName="bdr" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" Grid.Column="1" PanningMode="Both" VerticalScrollBarVisibility="Hidden" Margin="10,20">
                <ItemsControl x:Name="itemsControlProducts">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="180" Height="250" Margin="10" Background="White" Click="Product_Click" IsEnabled="{Binding IsAvailable}" Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="White" CornerRadius="18" BorderThickness="0" >
                                            <StackPanel VerticalAlignment="Top">
                                                <Border CornerRadius="18,18,0,0" ClipToBounds="True">
                                                    <Image CacheMode="BitmapCache"
                                                           Source="{Binding ImagePath, Converter={StaticResource ImgConverter}, IsAsync=True, TargetNullValue='pack://application:,,,/Images/default.jpg'}" 
                                                           Height="140" Stretch="UniformToFill"/>
                                                </Border>

                                                <Grid Height="110">
                                                    <StackPanel VerticalAlignment="Center" Margin="10">
                                                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"
                                                                   TextWrapping="Wrap" TextAlignment="Center" Foreground="#37474F" MaxHeight="44" TextTrimming="CharacterEllipsis"/>
                                                        <TextBlock Text="{Binding Price, StringFormat='{}{0:N0} د.ع'}" HorizontalAlignment="Center"
                                                                   Foreground="#2E7D32" FontWeight="Bold" FontSize="15" Margin="0,8,0,0"/>
                                                    </StackPanel>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97" CenterX="90" CenterY="125"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Border Grid.Row="1" Grid.Column="2" Margin="0,20,20,20">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" PanningMode="VerticalOnly">
                    <ItemsControl x:Name="icCategories">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Content="{Binding Name}" Style="{StaticResource CategoryButtonStyle}" Click="Category_Click" Tag="{Binding Name}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <Grid x:Name="PaymentOverlay" Grid.RowSpan="2" Grid.ColumnSpan="3" Visibility="Collapsed" Background="#B3000000">
                <Border Background="White" Width="500" Height="740" CornerRadius="24" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid Margin="30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="إتمام الحساب" HorizontalAlignment="Center" FontSize="26" FontWeight="Bold" Foreground="#37474F" Margin="0,0,0,20"/>

                        <Border Grid.Row="1" Background="#FAFAFA" CornerRadius="16" Padding="20" Margin="0,0,0,20" BorderBrush="#EEEEEE" BorderThickness="1">
                            <StackPanel>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                        <TextBlock Text="المجموع" FontSize="14" Foreground="#90A4AE"/>
                                        <TextBlock x:Name="txtSubTotal" Text="0" FontSize="20" FontWeight="SemiBold" Foreground="#546E7A"/>
                                    </StackPanel>

                                    <Button x:Name="btnDiscountArea" Grid.Column="2" Click="BtnEditDiscount_Click" Background="Transparent" BorderThickness="0">
                                        <Border Background="#FFEBEE" CornerRadius="10" Padding="15,5">
                                            <StackPanel>
                                                <TextBlock Text="خصم" FontSize="12" Foreground="#C62828" HorizontalAlignment="Center" FontWeight="Bold"/>
                                                <TextBlock x:Name="txtDiscountDisplay" Text="0" FontSize="18" FontWeight="Bold" Foreground="#D32F2F" HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </Button>
                                </Grid>

                                <Separator Background="#EEEEEE" Margin="0,0,0,15"/>

                                <DockPanel>
                                    <TextBlock Text="الصافي للدفع" FontSize="18" FontWeight="Bold" Foreground="#37474F" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtOverlayTotal" Text="0" FontSize="32" FontWeight="ExtraBold" Foreground="#37474F" DockPanel.Dock="Left"/>
                                </DockPanel>

                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="#E8F5E9" CornerRadius="12" BorderBrush="#A5D6A7" BorderThickness="1" Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="الواصل" FontSize="12" Foreground="#2E7D32" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="txtPaidAmount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#2E7D32" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Grid.Column="2" Background="#FFF3E0" CornerRadius="12" BorderBrush="#FFCC80" BorderThickness="1" Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="الباقي" FontSize="12" Foreground="#EF6C00" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="txtChangeAmount" Text="0" FontSize="24" FontWeight="Bold" Foreground="#EF6C00" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Grid Grid.Row="2" Margin="10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Button Content="7" Grid.Row="0" Grid.Column="0" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="8" Grid.Row="0" Grid.Column="1" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="9" Grid.Row="0" Grid.Column="2" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>

                            <Button Content="4" Grid.Row="1" Grid.Column="0" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="5" Grid.Row="1" Grid.Column="1" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="6" Grid.Row="1" Grid.Column="2" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>

                            <Button Content="1" Grid.Row="2" Grid.Column="0" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="2" Grid.Row="2" Grid.Column="1" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="3" Grid.Row="2" Grid.Column="2" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>

                            <Button Content="C" Grid.Row="3" Grid.Column="0" Style="{StaticResource NumpadButtonStyle}" Foreground="#D32F2F" Background="#FFEBEE" Click="Numpad_Clear_Click"/>
                            <Button Content="0" Grid.Row="3" Grid.Column="1" Style="{StaticResource NumpadButtonStyle}" Click="Numpad_Click"/>
                            <Button Content="⌫" Grid.Row="3" Grid.Column="2" Style="{StaticResource NumpadButtonStyle}" FontSize="22" Click="Numpad_Backspace_Click"/>
                        </Grid>

                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="إلغاء" Width="120" Height="55" Background="#ECEFF1" Foreground="#546E7A" FontSize="18" FontWeight="Bold" Margin="10,0" Click="CloseOverlay_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="14" RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr" Property="Background" Value="#CFD8DC"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="bdr" Property="Background" Value="#B0BEC5"/>
                                                <Setter TargetName="bdr" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="تأكيد وطباعة" Width="280" Height="55" Background="#7E57C2" Foreground="White" FontSize="20" FontWeight="Bold" Margin="10,0" Click="PrintReceipt_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="bdr" Background="{TemplateBinding Background}" CornerRadius="14" RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                            </Border.RenderTransform>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bdr" Property="Background" Value="#9575CD"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="bdr" Property="Background" Value="#5E35B1"/>
                                                <Setter TargetName="bdr" Property="RenderTransform">
                                                    <Setter.Value>
                                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Grid x:Name="LoadingOverlay" Grid.RowSpan="2" Grid.ColumnSpan="3" Visibility="Collapsed" Background="#80000000" Panel.ZIndex="1000">
                <Border Background="White" Width="300" Padding="30" CornerRadius="20" HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <StackPanel>
                        <ProgressBar IsIndeterminate="True" Height="6" Margin="0,0,0,20" Foreground="#7E57C2" Background="#ECEFF1" BorderThickness="0"/>
                        <TextBlock Text="جاري التحميل..." FontSize="18" FontWeight="Bold" Foreground="#37474F" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtLoadingHint" Text="يرجى الانتظار" FontSize="14" Foreground="#90A4AE" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <Grid x:Name="ToastOverlay" IsHitTestVisible="True" Panel.ZIndex="9999" Background="{x:Null}">
            <StackPanel x:Name="NotificationArea"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20"
                Width="360"/>
        </Grid>
        <local:ConfirmDialog x:Name="MyConfirmDialog" Panel.ZIndex="99999"/>
    </Grid>
</Window>