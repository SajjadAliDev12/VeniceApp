<Window x:Class="VinceApp.AccountVerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تفعيل الحساب" Height="540" Width="490"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        FlowDirection="RightToLeft">

    <Window.Resources>

        <!-- Shadow -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="8" ShadowDepth="6" Opacity="0.22" Color="#000000"/>

        <!-- Theme -->
        <SolidColorBrush x:Key="BorderSoft" Color="#E7E2DC"/>
        <SolidColorBrush x:Key="TextDark" Color="#2E2A27"/>

        <!-- Input TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox -->
        <Style x:Key="InputPasswordStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Touch primary button -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.18" Color="#000000"/>
                            </Border.Effect>

                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.12" Color="#000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#D7D7D7"/>
                                <Setter Property="Foreground" Value="#777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Link-like button -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#6F6761"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Padding="10,4" Background="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#2F2B29"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <!-- Soft dim background -->
    <Grid>
        <Border Background="#66000000"/>

        <!-- Main Card -->
        <Border Background="White"
                CornerRadius="18"
                BorderBrush="{StaticResource BorderSoft}"
                BorderThickness="1"
                Margin="24"
                Effect="{StaticResource CardShadow}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="450"
                Height="500">

            <Grid Margin="22">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="🔑 تفعيل الحساب"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#5D4037"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="أدخل رمز التفعيل الذي وصلك عبر البريد الإلكتروني"
                               FontSize="12"
                               Foreground="#7A726C"
                               HorizontalAlignment="Center"
                               Margin="0,6,0,0"/>
                </StackPanel>

                <!-- Content -->
                <StackPanel Grid.Row="1">

                    <TextBlock Text="رمز التفعيل:" Foreground="#7A726C" FontWeight="Bold" Margin="0,0,0,6"/>
                    <Grid Margin="0,0,0,14">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtToken"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Width="Auto"/>

                        <Button Grid.Column="2"
                                Content="تأكيد الرمز"
                                Width="130"
                                Background="#1976D2"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="ConfirmCode_Click"/>
                    </Grid>

                    <!-- Reset panel -->
                    <StackPanel x:Name="pnlReset" Visibility="Collapsed">

                        <Border Background="#E8F5E9"
                                BorderBrush="#A5D6A7"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="10"
                                Margin="0,0,0,14">
                            <TextBlock Text="تم إرسال الرمز إلى بريدك الإلكتروني"
                                       Foreground="#2E7D32"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="رمز التحقق (Token):"
                                   Foreground="#1976D2"
                                   FontWeight="Bold"
                                   Margin="0,0,0,6"/>
                        <TextBox Height="42"
                                 FontSize="14"
                                 Padding="10,6"
                                 Margin="0,0,0,12"
                                 Style="{StaticResource InputTextBoxStyle}"/>

                        <TextBlock Text="كلمة المرور الجديدة:" Foreground="#7A726C" FontWeight="Bold" Margin="0,0,0,6"/>
                        <PasswordBox x:Name="txtNewPass"
                                     Style="{StaticResource InputPasswordStyle}"
                                     Margin="0,0,0,6"/>
                    </StackPanel>

                </StackPanel>

                <!-- Footer actions -->
                <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,14,0,0">
                    <Button Content="اعادة ارسال رمز التفعيل"
                            Style="{StaticResource LinkButtonStyle}"
                            Click="ResendCode_Click"/>

                    <Button Content="الغاء واغلاق"
                            Style="{StaticResource LinkButtonStyle}"
                            Click="Close_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Visibility="Collapsed">
            <Border Background="#80000000"/>

            <Border Background="White"
                    CornerRadius="16"
                    Padding="22"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Effect="{StaticResource CardShadow}">
                <StackPanel HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="180" Height="10" Margin="0,0,0,12" BorderThickness="0"/>
                    <TextBlock x:Name="txtLoadingMsg"
                               Text="جاري محاولة الاتصال..."
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Foreground="#333"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
