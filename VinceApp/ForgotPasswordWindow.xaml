<Window x:Class="VinceApp.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="استعادة كلمة المرور" Height="500" Width="450"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        FlowDirection="RightToLeft">

    <Border Background="White" CornerRadius="15" BorderBrush="#5D4037" BorderThickness="2">
        <Grid>

            <Grid Margin="20">
                <StackPanel>
                    <TextBlock Text="🔑 استعادة الحساب" FontSize="22" FontWeight="Bold" Foreground="#5D4037" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <TextBlock Text="البريد الإلكتروني:" Foreground="Gray"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                        <TextBox x:Name="txtEmail" Width="240" Height="35" FontSize="14" Padding="5" LostFocus="txtEmail_LostFocus" />
                        <Button Name="btnSend" Content="إرسال الرمز" Width="100" Background="#2196F3" Foreground="White" Click="SendCode_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <StackPanel x:Name="pnlReset" Visibility="Collapsed">
                        <TextBlock Text="تم إرسال الرمز إلى بريدك الإلكتروني" Foreground="#4CAF50" FontSize="12" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                        <TextBlock Text="رمز التحقق (Token):" Foreground="#1976D2" FontWeight="Bold" Margin="0,10,0,5"/>
                        <TextBox x:Name="txtToken" Height="35" FontSize="14" Padding="5" Margin="0,0,0,10"/>

                        <TextBlock Text="كلمة المرور الجديدة:" Foreground="Gray"/>
                        <PasswordBox x:Name="txtNewPass" Height="35" FontSize="14" Padding="5" Margin="0,0,0,10"/>

                        <Button Content="تأكيد التغيير" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="0,10,0,0" Click="ConfirmReset_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <Button Content="إلغاء وإغلاق" Height="35" Background="Transparent" Foreground="#777" Margin="0,15,0,0" Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <Grid x:Name="LoadingOverlay" Visibility="Collapsed">
                <Border Background="#80000000" CornerRadius="20"/>

                <Border Background="White" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="150" Height="10" Margin="0,0,0,10" BorderThickness="0"/>
                        <TextBlock x:Name="txtLoadingMsg" Text="جاري محاولة الاتصال..." HorizontalAlignment="Center" FontWeight="Bold" Foreground="#333"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>