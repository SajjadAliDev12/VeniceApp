<Page x:Class="VinceApp.Pages.CategoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="إدارة التصنيفات" FlowDirection="RightToLeft" Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" CornerRadius="10" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="اسم التصنيف:" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>

                <TextBox x:Name="txtName" Width="250" Height="35" FontSize="14" VerticalContentAlignment="Center" Padding="5"/>

                <Button Content="💾 حفظ" Width="100" Height="35" Margin="10,0" 
                        Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="Save_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="إلغاء" Width="80" Height="35" 
                        Background="#E0E0E0" Foreground="#333" Click="Clear_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>

        <DataGrid x:Name="dgCategories" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" 
                  IsReadOnly="True" HeadersVisibility="Column" Background="White" RowHeight="40">
            <DataGrid.Columns>
                <DataGridTextColumn Header="الرقم" Binding="{Binding Id}" Width="80"/>
                <DataGridTextColumn Header="اسم التصنيف" Binding="{Binding Name}" Width="*"/>

                <DataGridTemplateColumn Header="العمليات" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="✏️ تعديل" Margin="5,0" Width="70" Background="#2196F3" Foreground="White" 
                                        Click="Edit_Click" Tag="{Binding Id}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Button Content="🗑️ حذف" Margin="5,0" Width="70" Background="#F44336" Foreground="White" 
                                        Click="Delete_Click" Tag="{Binding Id}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>