<Page x:Class="VinceApp.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:main="clr-namespace:VinceApp"
      Title="إدارة المنتجات" FlowDirection="RightToLeft" Background="White">

    <Page.Resources>
        <main:ImagePathConverter x:Key="ImgConverter"/>

        <!-- Shadow -->
        <DropShadowEffect x:Key="CardShadow" BlurRadius="8" ShadowDepth="3" Opacity="0.18" Color="#000000"/>

        <!-- Theme -->
        <SolidColorBrush x:Key="BgBrush" Color="#F6F4F1"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#E7E2DC"/>
        <SolidColorBrush x:Key="TextDark" Color="#2E2A27"/>

        <!-- Input TextBox -->
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Input ComboBox -->
        <Style x:Key="InputComboStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Touch button -->
        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.18" Color="#000000"/>
                            </Border.Effect>

                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.92"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.12" Color="#000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#D7D7D7"/>
                                <Setter Property="Foreground" Value="#777"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Smaller action buttons inside grid -->
        <Style x:Key="GridIconButtonStyle" TargetType="Button" BasedOn="{StaticResource TouchButtonStyle}">
            <Setter Property="Width" Value="42"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <!-- DataGrid -->
        <Style x:Key="BaseDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="62"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAF8F6"/>
        </Style>

        <Style x:Key="BaseHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2F2B29"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="BaseRowStyle" TargetType="DataGridRow">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FFF3E0"/>
                    <Setter Property="Foreground" Value="#2E2A27"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid Background="{StaticResource BgBrush}">
        <Grid Margin="22">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left form card -->
            <Border Grid.Column="0"
        Background="{StaticResource CardBrush}"
        CornerRadius="16"
        BorderBrush="{StaticResource BorderSoft}"
        BorderThickness="1"
        Padding="16"
        Margin="0,0,14,0"
        Effect="{StaticResource CardShadow}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- العنوان -->
                        <RowDefinition Height="*"/>
                        <!-- الفورم (Scroll) -->
                        <RowDefinition Height="Auto"/>
                        <!-- الأزرار (ثابتة) -->
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                   Text="بيانات المنتج"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{StaticResource TextDark}"
                   Margin="0,0,0,14"/>

                    <!-- ✅ الفورم قابل للتمرير -->
                    <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="0,0,8,0">

                        <StackPanel>

                            <TextBlock Text="اسم المنتج:" Foreground="#7A726C" Margin="0,0,0,6"/>
                            <TextBox x:Name="txtName"
                         Style="{StaticResource InputTextBoxStyle}"
                         Margin="0,0,0,12"/>

                            <TextBlock Text="السعر:" Foreground="#7A726C" Margin="0,0,0,6"/>
                            <TextBox x:Name="txtPrice"
                         Style="{StaticResource InputTextBoxStyle}"
                         Margin="0,0,0,12"
                         PreviewTextInput="NumberValidationTextBox"/>

                            <TextBlock Text="التصنيف:" Foreground="#7A726C" Margin="0,0,0,6"/>
                            <ComboBox x:Name="cmbCategories"
                          Style="{StaticResource InputComboStyle}"
                          Margin="0,0,0,10"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"/>

                            <Border Background="#FAF8F6"
                        CornerRadius="12"
                        BorderBrush="{StaticResource BorderSoft}"
                        BorderThickness="1"
                        Padding="10"
                        Margin="0,6,0,14">
                                <CheckBox x:Name="chkIsAvailable"
                              Content="متوفر في المخزون"
                              IsChecked="True"
                              FontSize="14"
                              FontWeight="SemiBold"
                              Foreground="#4A4440"
                              VerticalContentAlignment="Center"/>
                            </Border>

                            <TextBlock Text="صورة المنتج:" Foreground="#7A726C" Margin="0,0,0,6"/>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Content="📂 اختر صورة"
                            Width="120"
                            Background="#607D8B"
                            Style="{StaticResource TouchButtonStyle}"
                            Click="BrowseImage_Click"/>
                                <TextBlock x:Name="txtImageName"
                               Text="لم يتم اختيار صورة"
                               VerticalAlignment="Center"
                               Margin="10,0"
                               Foreground="#7A726C"
                               FontSize="12"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="170"/>
                            </StackPanel>

                            <Border BorderBrush="{StaticResource BorderSoft}"
                        BorderThickness="1"
                        CornerRadius="16"
                        Width="170"
                        Height="170"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,18"
                        Background="#FFFFFF"
                        Effect="{StaticResource CardShadow}">
                                <Border ClipToBounds="True" CornerRadius="16">
                                    <Image x:Name="imgPreview" Stretch="UniformToFill"/>
                                </Border>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- ✅ الأزرار ثابتة دائماً -->
                    <Border Grid.Row="2"
                BorderBrush="{StaticResource BorderSoft}"
                BorderThickness="0,1,0,0"
                Margin="0,12,0,0"
                Padding="0,12,0,0">

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="💾 حفظ" IsDefault="True"
                        Width="130"
                        Background="#2E7D32"
                        Style="{StaticResource TouchButtonStyle}"
                        Margin="6,0"
                        Click="Save_Click"/>

                            <Button Content="إلغاء / جديد" 
                        Width="130"
                        Background="#ECE7E2"
                        Foreground="#4A4440"
                        Style="{StaticResource TouchButtonStyle}"
                        Margin="6,0"
                        Click="Clear_Click"/>
                        </StackPanel>
                    </Border>

                </Grid>
            </Border>


            <!-- Right grid card -->
            <Border Grid.Column="1"
                    Background="{StaticResource CardBrush}"
                    CornerRadius="16"
                    BorderBrush="{StaticResource BorderSoft}"
                    BorderThickness="1"
                    Padding="10"
                    Effect="{StaticResource CardShadow}">

                <DataGrid x:Name="dgProducts"
                          Style="{StaticResource BaseDataGridStyle}"
                          ColumnHeaderStyle="{StaticResource BaseHeaderStyle}"
                          RowStyle="{StaticResource BaseRowStyle}">

                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="الصورة" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="54" Height="54" CornerRadius="14" ClipToBounds="True"
                                            BorderBrush="{StaticResource BorderSoft}" BorderThickness="1" Background="#FFFFFF">
                                        <Image Source="{Binding ImagePath, Converter={StaticResource ImgConverter}}"
                                               Stretch="UniformToFill"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="الاسم" Binding="{Binding Name}" Width="*" FontWeight="Bold"/>
                        <DataGridTextColumn Header="السعر" Binding="{Binding Price, StringFormat={}{0:N0} د.ع}" Width="130"/>
                        <DataGridTextColumn Header="التصنيف" Binding="{Binding Category.Name}" Width="140"/>

                        <DataGridCheckBoxColumn Header="متوفر" Binding="{Binding IsAvailable}" Width="80" IsReadOnly="True"/>

                        <DataGridTemplateColumn Header="العمليات" Width="170">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="✏️"
                                                Background="#1976D2"
                                                Style="{StaticResource GridIconButtonStyle}"
                                                Margin="4,0"
                                                Click="Edit_Click"
                                                Tag="{Binding Id}"/>

                                        <Button Content="🗑️"
                                                Background="#D32F2F"
                                                Style="{StaticResource GridIconButtonStyle}"
                                                Margin="4,0"
                                                Click="Delete_Click"
                                                Tag="{Binding Id}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </Border>

        </Grid>
    </Grid>
</Page>
