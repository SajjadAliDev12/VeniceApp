<Page x:Class="VinceApp.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:main="clr-namespace:VinceApp"
      Title="إدارة المنتجات" FlowDirection="RightToLeft" Background="White">

    <Page.Resources>
        <main:ImagePathConverter x:Key="ImgConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="104*"/>
            <RowDefinition Height="461*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="10" Padding="15" Margin="0,0,20,0" Grid.RowSpan="2">
            <StackPanel>
                <TextBlock Text="بيانات المنتج" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,15"/>

                <TextBlock Text="اسم المنتج:" Foreground="Gray"/>
                <TextBox x:Name="txtName" Height="35" FontSize="14" Padding="5" Margin="0,0,0,10"/>

                <TextBlock Text="السعر:" Foreground="Gray"/>
                <TextBox x:Name="txtPrice" Height="35" FontSize="14" Padding="5" Margin="0,0,0,10" PreviewTextInput="NumberValidationTextBox"/>

                <TextBlock Text="التصنيف:" Foreground="Gray"/>
                <ComboBox x:Name="cmbCategories" Height="35" FontSize="14" Margin="0,0,0,10" DisplayMemberPath="Name" SelectedValuePath="Id"/>

                <CheckBox x:Name="chkIsAvailable" Content="متوفر في المخزون" IsChecked="True" 
                          FontSize="14" Margin="0,5,0,15" Foreground="#333" VerticalContentAlignment="Center"/>

                <TextBlock Text="صورة المنتج:" Foreground="Gray"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="📂 اختر صورة" Width="100" Height="30" Background="#607D8B" Foreground="White" Click="BrowseImage_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <TextBlock x:Name="txtImageName" Text="لم يتم اختيار صورة" VerticalAlignment="Center" Margin="10,0" Foreground="Gray" FontSize="12" TextTrimming="CharacterEllipsis" MaxWidth="150"/>
                </StackPanel>

                <Border BorderBrush="Gray" BorderThickness="1" Width="150" Height="150" HorizontalAlignment="Center" Margin="0,0,0,20" Background="White">
                    <Image x:Name="imgPreview" Stretch="Uniform"/>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="💾 حفظ" Width="100" Height="40" Background="#4CAF50" Foreground="White" FontWeight="Bold" Margin="5" Click="Save_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="إلغاء / جديد" Width="100" Height="40" Background="#E0E0E0" Foreground="#333" Margin="5" Click="Clear_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <DataGrid x:Name="dgProducts" Grid.Column="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" HeadersVisibility="Column" Background="White" RowHeight="60" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="الصورة" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImagePath, Converter={StaticResource ImgConverter}}" Width="50" Height="50" Stretch="UniformToFill"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="الاسم" Binding="{Binding Name}" Width="*" FontWeight="Bold"/>
                <DataGridTextColumn Header="السعر" Binding="{Binding Price, StringFormat={}{0:N0} د.ع}" Width="100"/>
                <DataGridTextColumn Header="التصنيف" Binding="{Binding Category.Name}" Width="100"/>

                <DataGridCheckBoxColumn Header="متوفر" Binding="{Binding IsAvailable}" Width="60" IsReadOnly="True"/>

                <DataGridTemplateColumn Header="العمليات" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="✏️" Width="40" Height="30" Background="#2196F3" Foreground="White" Margin="2" Click="Edit_Click" Tag="{Binding Id}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button Content="🗑️" Width="40" Height="30" Background="#F44336" Foreground="White" Margin="2" Click="Delete_Click" Tag="{Binding Id}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>