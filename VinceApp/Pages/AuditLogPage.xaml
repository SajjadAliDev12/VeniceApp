<Page x:Class="VinceApp.Pages.AuditLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AuditLogPage" FlowDirection="RightToLeft" Background="#F2F5F8">
    <Page.Resources>

        <DropShadowEffect x:Key="CardShadow" BlurRadius="12" ShadowDepth="3" Opacity="0.08" Color="#000000"/>

        <SolidColorBrush x:Key="BgBrush" Color="#F2F5F8"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#CFD8DC"/>
        <SolidColorBrush x:Key="TextDark" Color="#37474F"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#7E57C2"/>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputComboStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="InputDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="6,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CFD8DC"/>
                                <Setter Property="Foreground" Value="#90A4AE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PagerButtonStyle" TargetType="Button" BasedOn="{StaticResource TouchButtonStyle}">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Background" Value="#ECEFF1"/>
            <Setter Property="Foreground" Value="#455A64"/>
        </Style>

        <Style x:Key="AuditDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F5F5F5"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
        </Style>

        <Style x:Key="AuditHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#37474F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#455A64"/>
        </Style>

        <Style x:Key="AuditRowStyle" TargetType="DataGridRow">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EDE7F6"/>
                    <Setter Property="Foreground" Value="#4527A0"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SmallActionButtonStyle" TargetType="Button" BasedOn="{StaticResource TouchButtonStyle}">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Width" Value="130"/>
        </Style>

    </Page.Resources>

    <Grid Background="{StaticResource BgBrush}">
        <Grid Margin="22">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Background="{StaticResource CardBrush}"
                    Padding="20"
                    CornerRadius="16"
                    Margin="0,0,0,14"
                    BorderBrush="{StaticResource BorderSoft}"
                    BorderThickness="1"
                    Effect="{StaticResource CardShadow}">

                <WrapPanel Orientation="Horizontal" VerticalAlignment="Center" ItemHeight="74">

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="المستخدم:"
                                   Foreground="#546E7A"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>
                        <TextBox x:Name="txtUserSearch"
                                 Width="180"
                                 Style="{StaticResource InputTextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="من تاريخ:"
                                   Foreground="#546E7A"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>
                        <DatePicker x:Name="dpFrom"
                                    Width="160"
                                    Style="{StaticResource InputDatePickerStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="إلى تاريخ:"
                                   Foreground="#546E7A"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>
                        <DatePicker x:Name="dpTo"
                                    Width="160"
                                    Style="{StaticResource InputDatePickerStyle}"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="الحدث:"
                                   Foreground="#546E7A"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,6"/>
                        <ComboBox x:Name="cmbAction"
                                  Width="160"
                                  Style="{StaticResource InputComboStyle}">
                            <ComboBoxItem Content="الكل" IsSelected="True"/>
                            <ComboBoxItem Content="Insert"/>
                            <ComboBoxItem Content="Update"/>
                            <ComboBoxItem Content="SoftDelete"/>
                            <ComboBoxItem Content="HardDelete"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,4">
                        <Button Content="🔍 بحث"
                                Click="BtnSearch_Click"
                                Width="110"
                                Background="#1976D2"
                                Style="{StaticResource TouchButtonStyle}"
                                Margin="6,0"/>

                        <Button Content="🔄 تحديث"
                                Click="BtnReset_Click"
                                Width="130"
                                Background="#607D8B"
                                Style="{StaticResource TouchButtonStyle}"/>
                    </StackPanel>

                </WrapPanel>
            </Border>

            <Border Grid.Row="1"
                    Background="{StaticResource CardBrush}"
                    CornerRadius="16"
                    BorderBrush="{StaticResource BorderSoft}"
                    BorderThickness="1"
                    Padding="1"
                    Effect="{StaticResource CardShadow}">

                <Border CornerRadius="16" ClipToBounds="True">
                    <DataGrid x:Name="dgLogs"
                              Style="{StaticResource AuditDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource AuditHeaderStyle}"
                              RowStyle="{StaticResource AuditRowStyle}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Id}" Width="80"/>

                            <DataGridTextColumn Header="وقت الحركة"
                                                Binding="{Binding Timestamp, StringFormat='yyyy/MM/dd hh:mm tt'}"
                                                Width="200"/>

                            <DataGridTextColumn Header="الموظف"
                                                Binding="{Binding UserFullName}"
                                                Width="180"
                                                FontWeight="SemiBold"/>

                            <DataGridTextColumn Header="الحدث"
                                                Binding="{Binding Action}"
                                                Width="130"/>

                            <DataGridTextColumn Header="الجدول المتأثر"
                                                Binding="{Binding TableName}"
                                                Width="160"/>

                            <DataGridTextColumn Header="رقم السجل"
                                                Binding="{Binding RecordId}"
                                                Width="130"/>

                            <DataGridTemplateColumn Header="تفاصيل التغيير" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="📄 عرض التغييرات"
                                                Click="BtnViewDetails_Click"
                                                Tag="{Binding Id}"
                                                Background="#FB8C00"
                                                Style="{StaticResource SmallActionButtonStyle}"
                                                HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Border>

            <Border Grid.Row="2" Background="{x:Null}" Margin="0,14,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnPrev"
                            Content="السابق"
                            Click="BtnPrev_Click"
                            Style="{StaticResource PagerButtonStyle}"/>

                    <Border Background="#FFFFFF"
                            CornerRadius="12"
                            BorderBrush="{StaticResource BorderSoft}"
                            BorderThickness="1"
                            Padding="20,10"
                            Margin="14,0"
                            Effect="{StaticResource CardShadow}">
                        <TextBlock x:Name="txtPageInfo"
                                   Text="صفحة 1"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextDark}"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <Button x:Name="btnNext"
                            Content="التالي"
                            Click="BtnNext_Click"
                            Style="{StaticResource PagerButtonStyle}"/>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</Page>