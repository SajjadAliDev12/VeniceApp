<Page x:Class="VinceApp.Pages.AuditLogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AuditLogPage" FlowDirection="RightToLeft" Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F5F5F5" Padding="15" CornerRadius="8" Margin="0,0,0,15" BorderBrush="#E0E0E0" BorderThickness="1">
            <WrapPanel Orientation="Horizontal" VerticalAlignment="Center">

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="المستخدم:" Foreground="#5D4037" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtUserSearch" Width="150" Height="30" Padding="5" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="من تاريخ:" Foreground="#5D4037" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpFrom" Width="120" Height="30"/>
                </StackPanel>

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="إلى تاريخ:" Foreground="#5D4037" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="dpTo" Width="120" Height="30"/>
                </StackPanel>

                <StackPanel Margin="0,0,15,0">
                    <TextBlock Text="الحدث:" Foreground="#5D4037" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cmbAction" Width="120" Height="30" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="الكل" IsSelected="True"/>
                        <ComboBoxItem Content="Insert"/>
                        <ComboBoxItem Content="Update"/>
                        <ComboBoxItem Content="SoftDelete"/>
                        <ComboBoxItem Content="HardDelete"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,2">
                    <Button Content="🔍 بحث" Click="BtnSearch_Click" Width="80" Height="30" Background="#3E2723" Foreground="White" Margin="5,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="🔄 إعادة ضبط" Click="BtnReset_Click" Width="90" Height="30" Background="#8D6E63" Foreground="White">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </WrapPanel>
        </Border>

        <DataGrid x:Name="dgLogs" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" 
                  HeadersVisibility="Column" Background="White" RowHeight="40" BorderThickness="1" BorderBrush="#E0E0E0">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#3E2723"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="وقت الحركة" Binding="{Binding Timestamp, StringFormat='yyyy/MM/dd hh:mm tt'}" Width="160"/>
                <DataGridTextColumn Header="الموظف" Binding="{Binding UserFullName}" Width="150" FontWeight="Bold"/>
                <DataGridTextColumn Header="الحدث" Binding="{Binding Action}" Width="100"/>
                <DataGridTextColumn Header="الجدول المتأثر" Binding="{Binding TableName}" Width="120"/>
                <DataGridTextColumn Header="رقم السجل" Binding="{Binding RecordId}" Width="100"/>

                <DataGridTemplateColumn Header="تفاصيل التغيير" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="📄 عرض التغييرات" Click="BtnViewDetails_Click" Tag="{Binding Changes}" 
                                    Width="120" Height="28" Background="#FF7043" Foreground="White" FontSize="12">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button x:Name="btnPrev" Content="السابق" Click="BtnPrev_Click" Width="100" Height="35" Background="#E0E0E0"/>
            <TextBlock x:Name="txtPageInfo" Text="صفحة 1" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0"/>
            <Button x:Name="btnNext" Content="التالي" Click="BtnNext_Click" Width="100" Height="35" Background="#E0E0E0"/>
        </StackPanel>
    </Grid>
</Page>