<Page x:Class="VinceApp.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

      Title="إدارة المستخدمين" FlowDirection="RightToLeft" Background="#F2F5F8">
    <Page.Resources>

       

        <SolidColorBrush x:Key="BgBrush" Color="#F2F5F8"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#CFD8DC"/>
        <SolidColorBrush x:Key="TextDark" Color="#37474F"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#7E57C2"/>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputPasswordStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputComboStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                Padding="{TemplateBinding Padding}">
                            
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CFD8DC"/>
                                <Setter Property="Foreground" Value="#90A4AE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GridActionButtonStyle" TargetType="Button" BasedOn="{StaticResource TouchButtonStyle}">
            <Setter Property="Height" Value="34"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Width" Value="92"/>
        </Style>

        <Style x:Key="BaseDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="48"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F5F5F5"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
        </Style>

        <Style x:Key="BaseHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#37474F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#455A64"/>
        </Style>

        <Style x:Key="BaseRowStyle" TargetType="DataGridRow">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EDE7F6"/>
                    <Setter Property="Foreground" Value="#4527A0"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Page.Resources>

    <Grid Background="{StaticResource BgBrush}">
        <Grid Margin="22">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="{StaticResource CardBrush}"
                    CornerRadius="16"
                    BorderBrush="{StaticResource BorderSoft}"
                    BorderThickness="1"
                    Padding="20"
                    Margin="0,0,16,0"
                    >

                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="👤" FontSize="20" Margin="0,0,10,0"/>
                        <TextBlock Text="بيانات المستخدم"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextDark}"/>
                    </StackPanel>

                    <TextBlock Text="اسم المستخدم (للدخول للنظام):" Style="{StaticResource SectionTitleStyle}"/>
                    <TextBox x:Name="txtUsername" Style="{StaticResource InputTextBoxStyle}" Margin="0,0,0,12"/>

                    <TextBlock Text="الاسم الكامل (للفواتير):" Style="{StaticResource SectionTitleStyle}"/>
                    <TextBox x:Name="txtFullName" Style="{StaticResource InputTextBoxStyle}" Margin="0,0,0,12"/>

                    <TextBlock Text="نوع الصلاحية:" Style="{StaticResource SectionTitleStyle}"/>
                    <ComboBox x:Name="cmbRole" Style="{StaticResource InputComboStyle}" Margin="0,0,0,14"/>

                    <Separator Margin="0,10,0,14" Background="#F0F0F0"/>

                    <TextBlock Text="كلمة المرور:" Style="{StaticResource SectionTitleStyle}"/>
                    <PasswordBox x:Name="txtPassword" Style="{StaticResource InputPasswordStyle}" Margin="0,0,0,10"/>

                    <Border Background="#E3F2FD"
                            BorderBrush="#90CAF9"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12,8"
                            Margin="0,0,0,14">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ℹ️" Margin="0,0,5,0"/>
                            <TextBlock Text="اترك الحقل فارغاً عند التعديل لعدم تغيير كلمة المرور"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#1976D2"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Separator Margin="0,6,0,14" Background="#F0F0F0"/>

                    <TextBlock Text="البريد الالكتروني:" Style="{StaticResource SectionTitleStyle}"/>
                    <TextBox x:Name="txtEmail" Style="{StaticResource InputTextBoxStyle}" Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="💾 حفظ"
                                Width="140" IsDefault="True"
                                Background="{StaticResource PrimaryColor}"
                                Style="{StaticResource TouchButtonStyle}"
                                Margin="6,0"
                                Click="Save_Click"/>

                        <Button Content="إلغاء" 
                                Width="140"
                                Background="#ECEFF1"
                                Foreground="#455A64"
                                Style="{StaticResource TouchButtonStyle}"
                                Margin="6,0"
                                Click="Button_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    Background="{StaticResource CardBrush}"
                    CornerRadius="16"
                    BorderBrush="{StaticResource BorderSoft}"
                    BorderThickness="1"
                    Padding="1"
                    >
                <Border CornerRadius="16" ClipToBounds="True">
                    <DataGrid x:Name="dgUsers"
                              Style="{StaticResource BaseDataGridStyle}"
                              ColumnHeaderStyle="{StaticResource BaseHeaderStyle}"
                              RowStyle="{StaticResource BaseRowStyle}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="اسم المستخدم" Binding="{Binding Username}" Width="*" FontWeight="SemiBold"/>
                            <DataGridTextColumn Header="الاسم الكامل" Binding="{Binding FullName}" Width="1.5*"/>
                            <DataGridTextColumn Header="الصلاحية" Binding="{Binding Role}" Width="120"/>

                            <DataGridTemplateColumn Header="العمليات" Width="240">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="✏️ تعديل"
                                                    Background="#607D8B"
                                                    Style="{StaticResource GridActionButtonStyle}"
                                                    Margin="4,0"
                                                    Click="Edit_Click"
                                                    Tag="{Binding Id}"/>

                                            <Button Content="🗑️ حذف"
                                                    Background="#E53935"
                                                    Style="{StaticResource GridActionButtonStyle}"
                                                    Margin="4,0"
                                                    Click="Delete_Click"
                                                    Tag="{Binding Id}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                    </DataGrid>
                </Border>
            </Border>

        </Grid>
       
    </Grid>
</Page>