<Page x:Class="VinceApp.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="الإعدادات" 
      FlowDirection="RightToLeft" 
      Background="{x:Null}"
      MouseLeftButtonDown="Page_MouseLeftButtonDown">

    <Page.Resources>

        <DropShadowEffect x:Key="CardShadow" BlurRadius="12" ShadowDepth="3" Opacity="0.08" Color="#000000"/>

        <SolidColorBrush x:Key="BgBrush" Color="#F2F5F8"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#CFD8DC"/>
        <SolidColorBrush x:Key="TextDark" Color="#37474F"/>
        <SolidColorBrush x:Key="TextLight" Color="#78909C"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#7E57C2"/>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="b" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="20"
                                BorderBrush="#EF9A9A"
                                BorderThickness="1">
                            <TextBlock Text="✕" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       FontSize="14" 
                                       FontWeight="Bold"
                                       Foreground="#C62828"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="b" Property="Background" Value="#E57373"/>
                                <Setter TargetName="b" Property="TextBlock.Foreground" Value="White"/>
                                <Setter TargetName="b" Property="BorderBrush" Value="#E57373"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputPasswordStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputComboStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="TouchButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="6" ShadowDepth="2" Opacity="0.1" Color="#000000"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CFD8DC"/>
                                <Setter Property="Foreground" Value="#90A4AE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardGroupStyle" TargetType="GroupBox">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Background="{StaticResource CardBrush}"
                                CornerRadius="14"
                                BorderBrush="{StaticResource BorderSoft}"
                                BorderThickness="1"
                                Padding="20"
                                Effect="{StaticResource CardShadow}">
                            <DockPanel>
                                <Border DockPanel.Dock="Top" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" Margin="0,0,0,15" Padding="0,0,0,10">
                                    <TextBlock Text="{TemplateBinding Header}"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource TextDark}"/>
                                </Border>
                                <ContentPresenter/>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#546E7A"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="tabBorder"
                                    Background="#FFFFFF"
                                    BorderBrush="Transparent"
                                    BorderThickness="0"
                                    CornerRadius="12"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="tabBorder" Property="Background" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="tabBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="#7E57C2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="tabBorder" Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsSelected" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="tabBorder" Property="Background" Value="{StaticResource PrimaryColor}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <Grid>
        <Border Background="{StaticResource BgBrush}" CornerRadius="20" ClipToBounds="True">
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="{StaticResource CardBrush}"
                        CornerRadius="16"
                        BorderBrush="{StaticResource BorderSoft}"
                        BorderThickness="1"
                        Padding="20"
                        Margin="0,0,0,20"
                        Effect="{StaticResource CardShadow}">

                    <DockPanel LastChildFill="True">
                        <Button DockPanel.Dock="Right" IsCancel="True"
                                Style="{StaticResource CloseButtonStyle}"
                                ToolTip="إغلاق النافذة"
                                Click="Close_Click"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"/>

                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="22" Margin="0,0,10,0"/>
                                <TextBlock Text="إعدادات النظام"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextDark}"/>
                            </StackPanel>
                            <TextBlock Text="إدارة النسخ الاحتياطي، البريد، بيانات المتجر، التحديثات والطباعة"
                                       Foreground="{StaticResource TextLight}"
                                       FontSize="13"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <TabControl Grid.Row="1">

                    <TabItem Name="tabctrlBackup" Header="النسخ الاحتياطي">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,15,0,0">
                            <StackPanel>

                                <GroupBox Header="إدارة البيانات" Style="{StaticResource CardGroupStyle}">
                                    <StackPanel>
                                        <Border Background="#FFF3E0"
                                                BorderBrush="#FFE0B2"
                                                BorderThickness="1"
                                                CornerRadius="10"
                                                Padding="12"
                                                Margin="0,0,0,15">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="⚠️" Margin="0,0,5,0"/>
                                                <TextBlock Text="تحذير: استعادة نسخة سابقة سيقوم بمسح كافة البيانات الحالية."
                                                           Foreground="#E65100"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Border>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="15"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Button Content="📥 إنشاء نسخة احتياطية"
                                                    Background="#00897B"
                                                    Style="{StaticResource TouchButtonStyle}"
                                                    Click="Backup_Click"/>

                                            <Button Grid.Column="2"
                                                    Content="📤 استعادة نسخة سابقة"
                                                    Background="#E53935"
                                                    Style="{StaticResource TouchButtonStyle}"
                                                    Click="Restore_Click"/>
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>

                                <GroupBox Header="إعدادات البريد (SMTP)" Style="{StaticResource CardGroupStyle}">
                                    <StackPanel>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="15"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="خادم البريد (Host):" Style="{StaticResource SectionTitleStyle}"/>
                                                <TextBox x:Name="txtSmtpServer"
                                                         Style="{StaticResource InputTextBoxStyle}"
                                                         FlowDirection="LeftToRight"
                                                         Margin="0,0,0,12"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="البورت (Port):" Style="{StaticResource SectionTitleStyle}"/>
                                                <TextBox x:Name="txtPort"
                                                         Style="{StaticResource InputTextBoxStyle}"
                                                         FlowDirection="LeftToRight"
                                                         Margin="0,0,0,12"/>
                                            </StackPanel>
                                        </Grid>

                                        <TextBlock Text="بريد المرسل (Email):" Style="{StaticResource SectionTitleStyle}"/>
                                        <TextBox x:Name="txtSenderEmail"
                                                 Style="{StaticResource InputTextBoxStyle}"
                                                 FlowDirection="LeftToRight"
                                                 Margin="0,0,0,12"/>

                                        <TextBlock Text="رمز التطبيق (App Password):" Style="{StaticResource SectionTitleStyle}"/>
                                        <PasswordBox x:Name="txtSenderPass"
                                                     Style="{StaticResource InputPasswordStyle}"
                                                     FlowDirection="LeftToRight"
                                                     Margin="0,0,0,20"/>

                                        <Button Content="حفظ إعدادات البريد" IsDefault="True"
                                                Background="{StaticResource PrimaryColor}"
                                                Style="{StaticResource TouchButtonStyle}"
                                                HorizontalAlignment="Right"
                                                Width="200"
                                                Click="SaveMail_Click"/>
                                    </StackPanel>
                                </GroupBox>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Name="TabctrlStore" Header="المتجر والفواتير">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,15,0,0">
                            <StackPanel>

                                <GroupBox x:Name="grbxInfo" Header="بيانات المتجر (للفواتير)" Style="{StaticResource CardGroupStyle}">
                                    <StackPanel>
                                        <TextBlock Text="اسم المتجر:" Style="{StaticResource SectionTitleStyle}"/>
                                        <TextBox x:Name="txtStoreName" Style="{StaticResource InputTextBoxStyle}" Margin="0,0,0,12"/>

                                        <TextBlock Text="رقم الهاتف:" Style="{StaticResource SectionTitleStyle}"/>
                                        <TextBox x:Name="txtStorePhone" Style="{StaticResource InputTextBoxStyle}" Margin="0,0,0,12"/>

                                        <TextBlock Text="العنوان:" Style="{StaticResource SectionTitleStyle}"/>
                                        <TextBox x:Name="txtStoreAddress" Style="{StaticResource InputTextBoxStyle}" Margin="0,0,0,12"/>

                                        <TextBlock Text="تذييل الفاتورة (Footer):" Style="{StaticResource SectionTitleStyle}"/>
                                        <TextBox x:Name="txtReceiptFooter" Style="{StaticResource InputTextBoxStyle}"/>
                                    </StackPanel>
                                </GroupBox>

                                <GroupBox Header="إعدادات الطباعة" Style="{StaticResource CardGroupStyle}">
                                    <StackPanel>
                                        <TextBlock Text="الطابعة الافتراضية للفواتير:" Style="{StaticResource SectionTitleStyle}"/>
                                        <ComboBox x:Name="cmbPrinters" Style="{StaticResource InputComboStyle}" Margin="0,0,0,15"/>

                                        <Border Background="#FAFAFA"
                                                CornerRadius="10"
                                                BorderBrush="#EEEEEE"
                                                BorderThickness="1"
                                                Padding="12"
                                                Margin="0,0,0,20">
                                            <StackPanel>
                                                <CheckBox x:Name="chkAutoPrint"
                                                          Content="طباعة الفاتورة تلقائياً بعد الحفظ"
                                                          FontSize="14" FontWeight="SemiBold"
                                                          Foreground="#455A64" Margin="0,0,0,8"/>

                                                <CheckBox x:Name="chkdisableSounds"
                                                          Content="إلغاء تفعيل الأصوات"
                                                          FontSize="14" FontWeight="SemiBold"
                                                          Foreground="#455A64"/>
                                            </StackPanel>
                                        </Border>

                                        <Button Content="حفظ إعدادات المتجر"
                                                Background="{StaticResource PrimaryColor}"
                                                Style="{StaticResource TouchButtonStyle}"
                                                HorizontalAlignment="Right"
                                                Width="200"
                                                Click="SaveStore_Click"/>
                                    </StackPanel>
                                </GroupBox>

                                <GroupBox Header="التحديثات" Style="{StaticResource CardGroupStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="الإصدار الحالي: " Style="{StaticResource SectionTitleStyle}" Margin="0"/>
                                                <TextBlock x:Name="txtCurrentVersion" Text="1.0.0" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" FlowDirection="LeftToRight"/>
                                            </StackPanel>
                                            <TextBlock x:Name="txtUpdateStatus" Text="النظام محدث لآخر إصدار" Foreground="#78909C" FontSize="12" Margin="0,5,0,0"/>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Content="🔎 التحقق الآن"
                                                Background="#FB8C00"
                                                Style="{StaticResource TouchButtonStyle}"
                                                Padding="15,0"
                                                Height="40"
                                                FontSize="14"
                                                Click="CheckUpdate_Click"/>
                                    </Grid>
                                </GroupBox>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                </TabControl>
            </Grid>
        </Border>

        <Grid x:Name="LoadingOverlay" Grid.RowSpan="3" Visibility="Collapsed" Background="#99FFFFFF">
            <Border Background="White" Width="400" Padding="30" CornerRadius="20" HorizontalAlignment="Center" VerticalAlignment="Center" Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <TextBlock Text="جاري المعالجة..." FontSize="20" FontWeight="Bold" Foreground="#37474F" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <ProgressBar IsIndeterminate="True" Height="6" Margin="0,0,0,10" Foreground="{StaticResource PrimaryColor}" Background="#ECEFF1" BorderThickness="0"/>
                    <TextBlock x:Name="txtLoadingHint" Text="يرجى الانتظار" FontSize="13" Foreground="#90A4AE" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>